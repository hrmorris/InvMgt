@model IEnumerable<InvoiceManagement.Models.Invoice>
@{
    ViewData["Title"] = "Supplier Invoice List Report";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-file-earmark-text me-2"></i>Supplier Invoice List</h2>
            <p class="text-muted mb-0">View and filter all supplier invoices</p>
        </div>
        <div class="d-flex gap-2">
            <form asp-action="DownloadSupplierInvoiceListPdf" method="post" class="d-inline">
                <input type="hidden" name="startDate" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                <input type="hidden" name="endDate" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                <input type="hidden" name="supplierId" value="@ViewBag.SelectedSupplierId" />
                <input type="hidden" name="status" value="@ViewBag.SelectedStatus" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-file-pdf me-1"></i> Download PDF
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Reports
            </a>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Options</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control"
                        value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control"
                        value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Supplier</label>
                    <select name="supplierId" class="form-select">
                        <option value="">All Suppliers</option>
                        @foreach (var supplier in ViewBag.Suppliers)
                        {
                            if (ViewBag.SelectedSupplierId != null && ViewBag.SelectedSupplierId == supplier.Id)
                            {
                                <option value="@supplier.Id" selected>@supplier.SupplierName</option>
                            }
                            else
                            {
                                <option value="@supplier.Id">@supplier.SupplierName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="All"
                            selected="@(ViewBag.SelectedStatus == "All" || ViewBag.SelectedStatus == null)">All Status
                        </option>
                        <option value="Draft" selected="@(ViewBag.SelectedStatus == "Draft")">Draft</option>
                        <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Pending</option>
                        <option value="Approved" selected="@(ViewBag.SelectedStatus == "Approved")">Approved</option>
                        <option value="Partial" selected="@(ViewBag.SelectedStatus == "Partial")">Partial</option>
                        <option value="Paid" selected="@(ViewBag.SelectedStatus == "Paid")">Paid</option>
                        <option value="Overdue" selected="@(ViewBag.SelectedStatus == "Overdue")">Overdue</option>
                        <option value="Cancelled" selected="@(ViewBag.SelectedStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Apply Filters
                    </button>
                    <a asp-action="SupplierInvoiceList" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Total Invoices</h6>
                            <h3 class="card-title mb-0">@ViewBag.TotalInvoices</h3>
                        </div>
                        <i class="bi bi-file-earmark-text fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Total Amount</h6>
                            <h3 class="card-title mb-0">
                                @ViewBag.CurrencySymbol@(((decimal)ViewBag.TotalAmount).ToString("N2"))</h3>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Total Paid</h6>
                            <h3 class="card-title mb-0">
                                @ViewBag.CurrencySymbol@(((decimal)ViewBag.TotalPaid).ToString("N2"))</h3>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Total Balance</h6>
                            <h3 class="card-title mb-0">
                                @ViewBag.CurrencySymbol@(((decimal)ViewBag.TotalBalance).ToString("N2"))</h3>
                        </div>
                        <i class="bi bi-hourglass-split fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoice List Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Invoice List</h5>
            <span class="badge bg-secondary">@ViewBag.TotalInvoices records</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Invoice #</th>
                            <th>Date</th>
                            <th>Due Date</th>
                            <th>Supplier</th>
                            <th>Notes</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Paid</th>
                            <th class="text-end">Balance</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var invoice in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Invoices" asp-action="Details" asp-route-id="@invoice.Id"
                                            class="text-decoration-none fw-semibold">
                                            @invoice.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>@invoice.InvoiceDate.ToString(ViewBag.DateFormat ?? "dd/MM/yyyy")</td>
                                    <td>
                                        @if (invoice.DueDate < DateTime.Today && invoice.BalanceAmount > 0)
                                        {
                                            <span class="text-danger">@invoice.DueDate.ToString(ViewBag.DateFormat ??
                                                                                    "dd/MM/yyyy")</span>
                                                                }
                                        else
                                        {
                                            @invoice.DueDate.ToString(ViewBag.DateFormat ?? "dd/MM/yyyy")
                                        }
                                    </td>
                                    <td>@(invoice.Supplier?.SupplierName ?? "N/A")</td>
                                    <td>@(invoice.Notes ?? "-")</td>
                                    <td class="text-end">@ViewBag.CurrencySymbol@invoice.TotalAmount.ToString("N2")</td>
                                    <td class="text-end text-success">@ViewBag.CurrencySymbol@invoice.PaidAmount.ToString("N2")
                                    </td>
                                    <td class="text-end @(invoice.BalanceAmount > 0 ? "text-danger fw-semibold" : "")">
                                        @ViewBag.CurrencySymbol@invoice.BalanceAmount.ToString("N2")</td>
                                    <td class="text-center">
                                        @{
                                            var badgeClass = invoice.Status switch
                                            {
                                                "Draft" => "bg-secondary",
                                                "Pending" => "bg-warning text-dark",
                                                "Approved" => "bg-info",
                                                "Partial" => "bg-primary",
                                                "Paid" => "bg-success",
                                                "Overdue" => "bg-danger",
                                                "Cancelled" => "bg-dark",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@invoice.Status</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Invoices" asp-action="Details" asp-route-id="@invoice.Id"
                                            class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No invoices found matching the selected criteria.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>