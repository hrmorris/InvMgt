@model IEnumerable<InvoiceManagement.Models.Payment>
@{
    ViewData["Title"] = "Payments List Report";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-credit-card me-2"></i>Payments List</h2>
            <p class="text-muted mb-0">View and filter all payment transactions</p>
        </div>
        <div class="d-flex gap-2">
            <form asp-action="DownloadPaymentsListPdf" method="post" class="d-inline">
                <input type="hidden" name="startDate" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                <input type="hidden" name="endDate" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                <input type="hidden" name="paymentMethod" value="@ViewBag.SelectedPaymentMethod" />
                <input type="hidden" name="status" value="@ViewBag.SelectedStatus" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-file-pdf me-1"></i> Download PDF
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Reports
            </a>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Options</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control"
                        value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control"
                        value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Payment Method</label>
                    <select name="paymentMethod" class="form-select">
                        <option value="All"
                            selected="@(ViewBag.SelectedPaymentMethod == "All" || ViewBag.SelectedPaymentMethod == null)">
                            All Methods</option>
                        <option value="Cash" selected="@(ViewBag.SelectedPaymentMethod == "Cash")">Cash</option>
                        <option value="Bank Transfer" selected="@(ViewBag.SelectedPaymentMethod == "Bank Transfer")">
                            Bank Transfer</option>
                        <option value="Check" selected="@(ViewBag.SelectedPaymentMethod == "Check")">Check</option>
                        <option value="Credit Card" selected="@(ViewBag.SelectedPaymentMethod == "Credit Card")">Credit
                            Card</option>
                        <option value="Other" selected="@(ViewBag.SelectedPaymentMethod == "Other")">Other</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="All"
                            selected="@(ViewBag.SelectedStatus == "All" || ViewBag.SelectedStatus == null)">All Status
                        </option>
                        <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Pending</option>
                        <option value="Completed" selected="@(ViewBag.SelectedStatus == "Completed")">Completed</option>
                        <option value="Allocated" selected="@(ViewBag.SelectedStatus == "Allocated")">Allocated</option>
                        <option value="Partial" selected="@(ViewBag.SelectedStatus == "Partial")">Partial</option>
                        <option value="Cancelled" selected="@(ViewBag.SelectedStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-search me-1"></i> Apply Filters
                    </button>
                    <a asp-action="PaymentsList" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Total Payments</h6>
                            <h3 class="card-title mb-0">@ViewBag.TotalPayments</h3>
                        </div>
                        <i class="bi bi-credit-card fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Total Amount</h6>
                            <h3 class="card-title mb-0">
                                @ViewBag.CurrencySymbol@(((decimal)ViewBag.TotalAmount).ToString("N2"))</h3>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Allocated</h6>
                            <h3 class="card-title mb-0">
                                @ViewBag.CurrencySymbol@(((decimal)ViewBag.TotalAllocated).ToString("N2"))</h3>
                        </div>
                        <i class="bi bi-check2-circle fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1">Unallocated</h6>
                            <h3 class="card-title mb-0">
                                @ViewBag.CurrencySymbol@(((decimal)ViewBag.TotalUnallocated).ToString("N2"))</h3>
                        </div>
                        <i class="bi bi-hourglass-split fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payments List Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Payments List</h5>
            <span class="badge bg-secondary">@ViewBag.TotalPayments records</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Payment #</th>
                            <th>Date</th>
                            <th>Supplier</th>
                            <th>Method</th>
                            <th>Reference</th>
                            <th class="text-end">Amount</th>
                            <th class="text-end">Allocated</th>
                            <th class="text-end">Unallocated</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Payments" asp-action="Details" asp-route-id="@payment.Id"
                                            class="text-decoration-none fw-semibold">
                                            @payment.PaymentNumber
                                        </a>
                                    </td>
                                    <td>@payment.PaymentDate.ToString(ViewBag.DateFormat ?? "dd/MM/yyyy")</td>
                                    <td>
                                        @{
                                            var reportSupplierName = payment.Supplier?.SupplierName
                                            ?? payment.Invoice?.Supplier?.SupplierName
                                            ?? payment.PaymentAllocations?.FirstOrDefault(a => a.Invoice?.Supplier !=
                                            null)?.Invoice?.Supplier?.SupplierName
                                            ?? payment.PaymentAllocations?.FirstOrDefault()?.Invoice?.CustomerName
                                            ?? "N/A";
                                        }
                                        @reportSupplierName
                                    </td>
                                    <td>
                                        @{
                                            var methodIcon = payment.PaymentMethod switch
                                            {
                                                "Cash" => "bi-cash",
                                                "Bank Transfer" => "bi-bank",
                                                "Check" => "bi-journal-text",
                                                "Credit Card" => "bi-credit-card",
                                                _ => "bi-wallet2"
                                            };
                                        }
                                        <i class="bi @methodIcon me-1"></i>@payment.PaymentMethod
                                    </td>
                                    <td>@(payment.ReferenceNumber ?? "-")</td>
                                    <td class="text-end fw-semibold">@ViewBag.CurrencySymbol@payment.Amount.ToString("N2")</td>
                                    <td class="text-end text-success">
                                        @ViewBag.CurrencySymbol@payment.AllocatedAmount.ToString("N2")</td>
                                    <td class="text-end @(payment.UnallocatedAmount > 0 ? "text-warning fw-semibold" : "")">
                                        @ViewBag.CurrencySymbol@payment.UnallocatedAmount.ToString("N2")</td>
                                    <td class="text-center">
                                        @{
                                            var badgeClass = payment.Status switch
                                            {
                                                "Pending" => "bg-warning text-dark",
                                                "Completed" => "bg-info",
                                                "Allocated" => "bg-success",
                                                "Partial" => "bg-primary",
                                                "Cancelled" => "bg-dark",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@payment.Status</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Payments" asp-action="Details" asp-route-id="@payment.Id"
                                            class="btn btn-sm btn-outline-success" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No payments found matching the selected criteria.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>