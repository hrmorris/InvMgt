@model Payment

@{
    ViewData["Title"] = "Delete Payment";
}
@functions {
    public string FormatCurrency(decimal amount)
    {
        var settings = ViewData["CurrencySettings"] as CurrencySettings;
        if (settings != null)
        {
            return CurrencyHelper.FormatCurrency(amount, settings);
        }
        return $"K {amount:N2}";
    }
    public string CurrencySymbol()
    {
        return ViewData["CurrencySymbol"]?.ToString() ?? "K";
    }
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger"><i class="bi bi-trash"></i> Delete Payment</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="alert alert-danger">
    <h5><i class="bi bi-exclamation-triangle-fill"></i> Warning</h5>
    <p>Are you sure you want to delete this payment? This action will:</p>
    <ul>
        <li>Remove this payment record permanently</li>
        <li>Adjust the associated invoice balance accordingly</li>
        <li>Update the invoice status</li>
    </ul>
    <p class="mb-0"><strong>This action cannot be undone.</strong></p>
</div>

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h6 class="m-0">Payment to be deleted</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Payment Number</dt>
            <dd class="col-sm-9">@Model.PaymentNumber</dd>

            <dt class="col-sm-3">Payment Date</dt>
            <dd class="col-sm-9">@Model.PaymentDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9"><strong class="text-success">@FormatCurrency(Model.Amount)</strong></dd>

            <dt class="col-sm-3">Payment Method</dt>
            <dd class="col-sm-9">@Model.PaymentMethod</dd>

            @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
            {
                <dt class="col-sm-3">Reference Number</dt>
                <dd class="col-sm-9">@Model.ReferenceNumber</dd>
            }

            @if (Model.Invoice != null)
            {
                <dt class="col-sm-3">Invoice</dt>
                <dd class="col-sm-9">
                    <a asp-controller="Invoices" asp-action="Details" asp-route-id="@Model.Invoice.Id">
                        @Model.Invoice.InvoiceNumber
                    </a> - @Model.Invoice.CustomerName
                </dd>
            }

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <dt class="col-sm-3">Notes</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            }
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Yes, Delete Payment
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>

