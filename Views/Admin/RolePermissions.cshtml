@using InvoiceManagement.Controllers
@model List<RolePermissionInfo>
@{
    ViewData["Title"] = "Role Permissions";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-shield-lock me-2"></i>Role Permissions
            </h1>
            <p class="text-muted mb-0">View and understand role-based access control</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Admin
        </a>
    </div>

    <!-- Permission Matrix -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Permission Matrix</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Role</th>
                            <th>Invoices</th>
                            <th>Payments</th>
                            <th>Requisitions</th>
                            <th>Reports</th>
                            <th>Admin</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span class="badge bg-danger">Admin</span></td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-primary">Finance_Manager</span></td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-check-circle text-warning"></i> Approve</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> Full</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-info">Finance_Officer</span></td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> CRUD</td>
                            <td><i class="bi bi-check-circle-fill text-success"></i> CRUD</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-success">Health_Manager</span></td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-check-circle text-warning"></i> Create/Approve</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-warning text-dark">Supervisor</span></td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-check-circle text-warning"></i> Create/Approve L1</td>
                            <td><i class="bi bi-eye text-info"></i> View Own</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-secondary">Staff</span></td>
                            <td><i class="bi bi-eye text-info"></i> View Own</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                            <td><i class="bi bi-plus-circle text-primary"></i> Create</td>
                            <td><i class="bi bi-eye text-info"></i> View Own</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-light text-dark">Viewer</span></td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-eye text-info"></i> View</td>
                            <td><i class="bi bi-x-circle text-danger"></i> No</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Role Details -->
    <div class="row g-4">
        @foreach (var role in Model)
        {
            var badgeClass = role.RoleName switch
            {
                "Admin" => "bg-danger",
                "Finance_Manager" => "bg-primary",
                "Finance_Officer" => "bg-info",
                "Health_Manager" => "bg-success",
                "Supervisor" => "bg-warning text-dark",
                "Staff" => "bg-secondary",
                "Viewer" => "bg-light text-dark",
                _ => "bg-secondary"
            };

            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0">
                        <span class="badge @badgeClass fs-6">@role.RoleName</span>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small">@role.Description</p>
                        <h6>Permissions:</h6>
                        <ul class="list-unstyled small">
                            @foreach (var permission in role.Permissions)
                            {
                                <li><i class="bi bi-check text-success me-1"></i>@permission</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Permission Legend -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-transparent border-0">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Legend</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <p><i class="bi bi-check-circle-fill text-success me-2"></i><strong>Full:</strong> Complete access
                        (view, create, edit, delete)</p>
                    <p><i class="bi bi-check-circle text-warning me-2"></i><strong>Approve:</strong> Can approve/reject
                        items</p>
                </div>
                <div class="col-md-4">
                    <p><i class="bi bi-plus-circle text-primary me-2"></i><strong>Create:</strong> Can create new items
                        only</p>
                    <p><i class="bi bi-eye text-info me-2"></i><strong>View:</strong> Read-only access</p>
                </div>
                <div class="col-md-4">
                    <p><i class="bi bi-x-circle text-danger me-2"></i><strong>No:</strong> No access</p>
                    <p><strong>View Own:</strong> Can only view items they created</p>
                </div>
            </div>
        </div>
    </div>
</div>