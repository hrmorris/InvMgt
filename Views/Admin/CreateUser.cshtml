@model InvoiceManagement.Models.User

@{
    ViewData["Title"] = "Create New User";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-person-plus"></i> Create New User</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Users" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="CreateUser" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-person"></i> Username *
                            </label>
                            <input asp-for="Username" class="form-control" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <small class="text-muted">Must be unique</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock"></i> Password *
                            </label>
                            <input type="password" name="password" class="form-control" required minlength="6" />
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">
                            <i class="bi bi-person-badge"></i> Full Name *
                        </label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email *
                            </label>
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">
                                <i class="bi bi-telephone"></i> Phone
                            </label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label">
                                <i class="bi bi-building"></i> Department *
                            </label>
                            <input asp-for="Department" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Facility" class="form-label">
                                <i class="bi bi-hospital"></i> Facility *
                            </label>
                            <input asp-for="Facility" class="form-control" required placeholder="e.g., Main Hospital" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FacilityType" class="form-label">
                                <i class="bi bi-geo-alt"></i> Facility Type *
                            </label>
                            <select asp-for="FacilityType" class="form-select" required>
                                <option value="">-- Select Facility Type --</option>
                                <option value="Hospital">Hospital</option>
                                <option value="Outstation">Outstation Health Facility</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Role" class="form-label">
                                <i class="bi bi-shield-check"></i> Role *
                            </label>
                            <select asp-for="Role" class="form-select" required>
                                <option value="">-- Select Role --</option>
                                <option value="Admin">Admin</option>
                                <option value="OIC">OIC (Officer In Charge)</option>
                                <option value="Supervisor">Supervisor</option>
                                <option value="Finance_Officer">Finance Officer</option>
                                <option value="Health_Manager">Health Manager</option>
                                <option value="Hospital_Executive">Hospital Executive</option>
                                <option value="Finance_Manager">Finance Manager</option>
                                <option value="Procurement_Officer">Procurement Officer</option>
                                <option value="User">User (View Only)</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">
                            <i class="bi bi-toggle-on"></i> Status *
                        </label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Suspended">Suspended</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">
                            <i class="bi bi-card-text"></i> Notes
                        </label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes about this user"></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Create User
                        </button>
                        <a asp-action="Users" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-3">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-info-circle"></i> User Roles Guide
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt>Admin</dt>
                    <dd>Full system access and user management</dd>

                    <dt>OIC</dt>
                    <dd>Officers In Charge - Create requisitions</dd>

                    <dt>Supervisor</dt>
                    <dd>Approve requisitions (1st level)</dd>

                    <dt>Finance Officer</dt>
                    <dd>Screen requisitions for budget compliance</dd>

                    <dt>Health Manager</dt>
                    <dd>Final approval for outstation facilities</dd>

                    <dt>Hospital Executive</dt>
                    <dd>Final approval for hospital requisitions</dd>

                    <dt>Procurement Officer</dt>
                    <dd>Manage purchase orders and suppliers</dd>

                    <dt>User</dt>
                    <dd>View-only access to system</dd>
                </dl>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-warning">
                <i class="bi bi-exclamation-triangle"></i> Important
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>Username must be unique</li>
                    <li>Provide a temporary password</li>
                    <li>User should change password on first login</li>
                    <li>Assign appropriate role based on job function</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

