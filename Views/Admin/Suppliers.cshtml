@model IEnumerable<InvoiceManagement.Models.Supplier>

@{
    ViewData["Title"] = "Supplier Management";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-building"></i> Supplier Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="CreateSupplier" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Supplier
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Supplier Code</th>
                            <th>Supplier Name</th>
                            <th>Contact Person</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Payment Terms</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td><strong>@supplier.SupplierCode</strong></td>
                                <td>
                                    @supplier.SupplierName
                                    @if (!string.IsNullOrEmpty(supplier.TIN))
                                    {
                                        <br />
                                        <small class="text-muted">TIN: @supplier.TIN</small>
                                    }
                                </td>
                                <td>@supplier.ContactPerson</td>
                                <td>@supplier.Email</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(supplier.Phone))
                                    {
                                        @supplier.Phone
                                    }
                                    @if (!string.IsNullOrEmpty(supplier.Mobile))
                                    {
                                        <br />
                                        <small>@supplier.Mobile</small>
                                    }
                                </td>
                                <td>Net @supplier.PaymentTermsDays days</td>
                                <td>
                                    @if (supplier.Status == "Active")
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else if (supplier.Status == "OnHold")
                                    {
                                        <span class="badge bg-warning">On Hold</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="ViewSupplier" asp-route-id="@supplier.Id"
                                            class="btn btn-sm btn-outline-info" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="EditSupplier" asp-route-id="@supplier.Id"
                                            class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DeleteSupplier" asp-route-id="@supplier.Id"
                                            class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No suppliers found. Click "Add New Supplier" to add your first supplier.
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <h5>Supplier Statistics</h5>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">@Model.Count()</h3>
                    <p class="mb-0">Total Suppliers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">@Model.Count(s => s.Status == "Active")</h3>
                    <p class="mb-0">Active Suppliers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning">@Model.Count(s => s.Status == "OnHold")</h3>
                    <p class="mb-0">On Hold</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-secondary">@Model.Count(s => s.Status == "Inactive")</h3>
                    <p class="mb-0">Inactive</p>
                </div>
            </div>
        </div>
    </div>
</div>