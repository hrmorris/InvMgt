@model IEnumerable<InvoiceManagement.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-clock-history"></i> Audit Logs</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <select name="entity" class="form-select" onchange="this.form.submit()">
                    <option value="">All Entities</option>
                    <option value="Invoice" selected="@(ViewBag.Entity == "Invoice")">Invoice</option>
                    <option value="Payment" selected="@(ViewBag.Entity == "Payment")">Payment</option>
                    <option value="Requisition" selected="@(ViewBag.Entity == "Requisition")">Requisition</option>
                    <option value="PurchaseOrder" selected="@(ViewBag.Entity == "PurchaseOrder")">Purchase Order</option>
                    <option value="Supplier" selected="@(ViewBag.Entity == "Supplier")">Supplier</option>
                    <option value="User" selected="@(ViewBag.Entity == "User")">User</option>
                </select>
            </div>
            <div class="col-md-5">
                <input type="number" name="userId" class="form-control" placeholder="Filter by User ID" value="@ViewBag.UserId" />
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("AuditLogs")" class="btn btn-secondary w-100">Clear</a>
            </div>
        </form>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Date/Time</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Entity</th>
                            <th>Entity ID</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td><small>@log.ActionDate.ToString("yyyy-MM-dd HH:mm:ss")</small></td>
                                <td>@log.Username</td>
                                <td>
                                    @if (log.Action == "Created")
                                    {
                                        <span class="badge bg-success">@log.Action</span>
                                    }
                                    else if (log.Action == "Updated")
                                    {
                                        <span class="badge bg-info">@log.Action</span>
                                    }
                                    else if (log.Action == "Deleted")
                                    {
                                        <span class="badge bg-danger">@log.Action</span>
                                    }
                                    else if (log.Action == "Approved")
                                    {
                                        <span class="badge bg-primary">@log.Action</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@log.Action</span>
                                    }
                                </td>
                                <td><strong>@log.Entity</strong></td>
                                <td>@log.EntityId</td>
                                <td><small>@log.Details</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p class="text-muted small mt-2">Showing @Model.Count() recent log entries</p>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No audit logs found. Activity will be logged as users perform actions.
            </div>
        }
    </div>
</div>

