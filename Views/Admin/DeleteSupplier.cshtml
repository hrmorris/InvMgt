@model InvoiceManagement.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger"><i class="bi bi-trash"></i> Delete Supplier</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Suppliers" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
            <p>Are you sure you want to delete this supplier? This action cannot be undone.</p>
            <hr>
            <p class="mb-0">This may affect purchase orders and invoices linked to this supplier.</p>
        </div>

        <div class="card shadow">
            <div class="card-header bg-light">
                <h5 class="mb-0">Supplier Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Supplier Code</dt>
                    <dd class="col-sm-8"><strong>@Model.SupplierCode</strong></dd>

                    <dt class="col-sm-4">Supplier Name</dt>
                    <dd class="col-sm-8">@Model.SupplierName</dd>

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.ContactPerson))
                    {
                        <dt class="col-sm-4">Contact Person</dt>
                        <dd class="col-sm-8">@Model.ContactPerson</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Mobile))
                    {
                        <dt class="col-sm-4">Mobile</dt>
                        <dd class="col-sm-8">@Model.Mobile</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.TIN))
                    {
                        <dt class="col-sm-4">TIN</dt>
                        <dd class="col-sm-8">@Model.TIN</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.RegistrationNumber))
                    {
                        <dt class="col-sm-4">Registration Number</dt>
                        <dd class="col-sm-8">@Model.RegistrationNumber</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.BankName))
                    {
                        <dt class="col-sm-4">Bank</dt>
                        <dd class="col-sm-8">@Model.BankName - @Model.BankAccountNumber</dd>
                    }

                    <dt class="col-sm-4">Payment Terms</dt>
                    <dd class="col-sm-8">Net @Model.PaymentTermsDays days</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (Model.Status == "OnHold")
                        {
                            <span class="badge bg-warning">On Hold</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.ProductsServices))
                    {
                        <dt class="col-sm-4">Products/Services</dt>
                        <dd class="col-sm-8">@Model.ProductsServices</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@Model.Notes</dd>
                    }

                    <dt class="col-sm-4">Created Date</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>

                <hr>

                <form asp-action="DeleteSupplier" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Yes, Delete This Supplier
                        </button>
                        <a asp-action="Suppliers" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> No, Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-octagon"></i> Before You Delete
            </div>
            <div class="card-body">
                <h6>Consider These Alternatives:</h6>
                <ul>
                    <li><strong>Set to Inactive</strong> - preserves data and history</li>
                    <li><strong>Put On Hold</strong> - temporarily suspend transactions</li>
                </ul>
                
                <hr>

                <h6>Impact of Deletion:</h6>
                <ul class="mb-0">
                    <li>Supplier record will be deleted</li>
                    <li>Contact information will be lost</li>
                    <li>Cannot create new POs</li>
                    <li>Historical POs will remain (supplier shown as deleted)</li>
                </ul>

                <hr>

                <h6>What Will Be Preserved:</h6>
                <ul class="mb-0">
                    <li>Purchase orders history</li>
                    <li>Invoices from this supplier</li>
                    <li>Payment records</li>
                </ul>
            </div>
        </div>
    </div>
</div>

