@model InvoiceManagement.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger"><i class="bi bi-trash"></i> Delete User</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Users" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
            <p>Are you sure you want to delete this user? This action cannot be undone.</p>
            <hr>
            <p class="mb-0">All user data will be permanently removed from the system.</p>
        </div>

        <div class="card shadow">
            <div class="card-header bg-light">
                <h5 class="mb-0">User Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9"><strong>@Model.Username</strong></dd>

                    <dt class="col-sm-3">Full Name</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Phone</dt>
                    <dd class="col-sm-9">@(Model.Phone ?? "N/A")</dd>

                    <dt class="col-sm-3">Department</dt>
                    <dd class="col-sm-9">@Model.Department</dd>

                    <dt class="col-sm-3">Facility</dt>
                    <dd class="col-sm-9">@Model.Facility (@Model.FacilityType)</dd>

                    <dt class="col-sm-3">Role</dt>
                    <dd class="col-sm-9">
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge bg-danger">@Model.Role</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.Role.Replace("_", " ")</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.Status</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created Date</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>

                    @if (Model.LastLoginDate.HasValue)
                    {
                        <dt class="col-sm-3">Last Login</dt>
                        <dd class="col-sm-9">@Model.LastLoginDate.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <dt class="col-sm-3">Notes</dt>
                        <dd class="col-sm-9">@Model.Notes</dd>
                    }
                </dl>

                <hr>

                <form asp-action="DeleteUser" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Yes, Delete This User
                        </button>
                        <a asp-action="Users" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> No, Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-octagon"></i> Before You Delete
            </div>
            <div class="card-body">
                <h6>Consider These Alternatives:</h6>
                <ul>
                    <li><strong>Set to Inactive</strong> instead - preserves data and history</li>
                    <li><strong>Suspend</strong> temporarily - can be reactivated later</li>
                </ul>
                
                <hr>

                <h6>What Will Be Deleted:</h6>
                <ul class="mb-0">
                    <li>User account and credentials</li>
                    <li>User profile information</li>
                    <li>Login history</li>
                </ul>

                <hr>

                <h6>What Will Be Preserved:</h6>
                <ul class="mb-0">
                    <li>Audit log entries (username recorded)</li>
                    <li>Created requisitions/invoices</li>
                    <li>Approval history</li>
                </ul>
            </div>
        </div>
    </div>
</div>

