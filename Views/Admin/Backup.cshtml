@using InvoiceManagement.Controllers
@{
    ViewData["Title"] = "Database Backup";
    var backups = ViewBag.Backups as List<BackupInfo> ?? new List<BackupInfo>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-hdd me-2"></i>Database Backup
            </h1>
            <p class="text-muted mb-0">Create and manage database backups</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Admin
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Create Backup Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Create New Backup</h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-3">Create a backup of the current database. Backups are stored in the Backups
                folder.</p>
            <form asp-action="CreateBackup" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-download me-1"></i> Create Backup Now
                </button>
            </form>
        </div>
    </div>

    <!-- Existing Backups -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0">
            <h5 class="mb-0"><i class="bi bi-archive me-2"></i>Existing Backups</h5>
        </div>
        <div class="card-body">
            @if (!backups.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">No backups found. Create your first backup above.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Filename</th>
                                <th>Size</th>
                                <th>Created</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var backup in backups)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-zip text-primary me-2"></i>
                                        @backup.FileName
                                    </td>
                                    <td>@((backup.Size / 1024.0 / 1024.0).ToString("F2")) MB</td>
                                    <td>@backup.CreatedDate.ToString("dd-MMM-yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <a href="@Url.Action("DownloadBackup", new { fileName = backup.FileName })"
                                            class="btn btn-sm btn-outline-primary" title="Download">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        <form asp-action="DeleteBackup" method="post" class="d-inline"
                                            onsubmit="return confirm('Are you sure you want to delete this backup?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="fileName" value="@backup.FileName" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Backup Information -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-transparent border-0">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Backup Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>What's Included:</h6>
                    <ul class="text-muted">
                        <li>All invoice data</li>
                        <li>All payment records</li>
                        <li>Supplier and customer information</li>
                        <li>User accounts and settings</li>
                        <li>Audit logs</li>
                        <li>System configuration</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6>Recommendations:</h6>
                    <ul class="text-muted">
                        <li>Create backups before major changes</li>
                        <li>Keep at least 3 recent backups</li>
                        <li>Store backups in a separate location</li>
                        <li>Test restore procedures periodically</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>