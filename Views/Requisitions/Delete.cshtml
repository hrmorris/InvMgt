@model InvoiceManagement.Models.Requisition

@{
    ViewData["Title"] = "Delete Requisition";
}
@functions {
    public string FormatCurrency(decimal amount)
    {
        var settings = ViewData["CurrencySettings"] as CurrencySettings;
        if (settings != null)
        {
            return CurrencyHelper.FormatCurrency(amount, settings);
        }
        return $"K {amount:N2}";
    }
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-trash"></i> Delete Requisition</h1>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this
        requisition?</h4>
    <p>This action cannot be undone. All information related to this requisition will be permanently deleted.</p>
</div>

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Requisition to be Deleted</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Requisition Number</dt>
            <dd class="col-sm-9"><strong>@Model.RequisitionNumber</strong></dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.RequisitionDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Requested By</dt>
            <dd class="col-sm-9">@Model.RequestedBy</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Purpose</dt>
            <dd class="col-sm-9">@Model.Purpose</dd>

            <dt class="col-sm-3">Estimated Amount</dt>
            <dd class="col-sm-9"><strong>@FormatCurrency(Model.EstimatedAmount)</strong></dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge bg-secondary">@Model.Status.Replace("_", " ")</span>
            </dd>

            <dt class="col-sm-3">Items</dt>
            <dd class="col-sm-9">@Model.RequisitionItems.Count item(s)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>