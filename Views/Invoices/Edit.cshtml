        // Create new supplier from manual entry fields
        async function createNewSupplier() {
            const nameInput = document.getElementById('CustomerName');
            const addressInput = document.getElementById('CustomerAddress');
            const emailInput = document.getElementById('CustomerEmail');
            const phoneInput = document.getElementById('CustomerPhone');
            const supplierSelect = document.getElementById('supplierSelect');

            const supplierName = nameInput?.value?.trim();
            if (!supplierName) {
                alert('Please enter a supplier name first');
                nameInput?.focus();
                return;
            }

            // Confirm creation
            if (!confirm(`Create new supplier "${supplierName}"?`)) {
                return;
            }

            const createBtn = document.getElementById('createSupplierBtn');
            const originalHtml = createBtn.innerHTML;
            createBtn.disabled = true;
            createBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Creating...';

            try {
                const response = await fetch('@Url.Action("CreateSupplierFromInvoice", "Invoices")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({
                        supplierName: supplierName,
                        address: addressInput?.value || '',
                        email: emailInput?.value || '',
                        phone: phoneInput?.value || ''
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Add new option to supplier dropdown
                    const newOption = document.createElement('option');
                    newOption.value = result.supplierId;
                    newOption.text = result.supplierName;
                    newOption.setAttribute('data-name', supplierName);
                    newOption.setAttribute('data-address', addressInput?.value || '');
                    newOption.setAttribute('data-email', emailInput?.value || '');
                    newOption.setAttribute('data-phone', phoneInput?.value || '');
                    newOption.selected = true;
                    supplierSelect.appendChild(newOption);

                    // Update hidden SupplierId field
                    supplierSelect.value = result.supplierId;

                    // Show success message
                    alert(result.message);

                    // Hide create button since supplier is now selected
                    createBtn.style.display = 'none';
                    const createHint = document.getElementById('createSupplierHint');
                    if (createHint) createHint.style.display = 'none';

                    // Change button to indicate success
                    createBtn.innerHTML = '<i class="bi bi-check-circle"></i> Created!';
                    createBtn.classList.remove('btn-success');
                    createBtn.classList.add('btn-outline-success');
                    setTimeout(() => {
                        createBtn.innerHTML = originalHtml;
                        createBtn.classList.remove('btn-outline-success');
                        createBtn.classList.add('btn-success');
                        createBtn.disabled = false;
                    }, 2000);
                } else {
                    if (result.existingId) {
                        // Supplier already exists, select it
                        if (confirm(result.message + '\n\nWould you like to select the existing supplier?')) {
                            supplierSelect.value = result.existingId;
                            updateSupplierInfo();
                        }
                    } else {
                        alert('Error: ' + result.message);
                    }
                    createBtn.innerHTML = originalHtml;
                    createBtn.disabled = false;
                }
            } catch (error) {
                console.error('Error creating supplier:', error);
                alert('Error creating supplier. Please try again.');
                createBtn.innerHTML = originalHtml;
                createBtn.disabled = false;
            }
        }

