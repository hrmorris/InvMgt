            if (supplierSection) {
                supplierSection.style.display = isSupplier ? 'block' : 'none';
            }

            // Show/hide customer dropdown section
            const customerSection = document.getElementById('customerSelectSection');
            if (customerSection) {
                customerSection.style.display = isSupplier ? 'none' : 'block';
            }

            // Get dropdown selections to determine if Create buttons should show
            const supplierSelect = document.getElementById('supplierSelect');
            const customerSelect = document.getElementById('customerSelect');
            const hasSupplierSelected = supplierSelect && supplierSelect.value;
            const hasCustomerSelected = customerSelect && customerSelect.value;

            // Show/hide Create Supplier button and hint (only if supplier type AND no supplier selected)
            const createSupplierBtn = document.getElementById('createSupplierBtn');
            const createSupplierHint = document.getElementById('createSupplierHint');
