@model Invoice

@{
    ViewData["Title"] = "Edit Invoice";
    var availablePayments = ViewBag.AvailablePayments as List<Payment> ?? new List<Payment>();
    var suppliers = ViewBag.Suppliers as List<Supplier> ?? new List<Supplier>();
    var customers = ViewBag.Customers as List<Customer> ?? new List<Customer>();
    var isSupplierInvoice = Model.InvoiceType == "Supplier" || Model.InvoiceType == "Payable" || Model.SupplierId.HasValue;
}
@functions {
    public string FormatCurrency(decimal amount)
    {
        var settings = ViewData["CurrencySettings"] as CurrencySettings;
        if (settings != null)
        {
            return CurrencyHelper.FormatCurrency(amount, settings);
        }
        return $"K {amount:N2}";
    }
    public string CurrencySymbol()
    {
        return ViewData["CurrencySymbol"]?.ToString() ?? "K";
    }
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-pencil-square"></i> Edit Invoice</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="alert alert-info">
    <i class="bi bi-info-circle"></i> <strong>Edit Mode:</strong> You can modify all invoice details including line
    items. Totals will be recalculated automatically.
</div>

@if (Model.Status == "Paid" || Model.Status == "Partially Paid" || Model.PaidAmount > 0)
{
    <div class="alert alert-warning d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Payment Status:</strong> This invoice is <span
                class="badge bg-@(Model.Status == "Paid" ? "success" : "warning")">@Model.Status</span>
            with @FormatCurrency(Model.PaidAmount) allocated.
        </div>
        <form asp-action="MarkUnpaid" method="post" class="d-inline"
            onsubmit="return confirm('Are you sure you want to mark this invoice as Unpaid? This will remove ALL payment allocations and make them available for reallocation.');">
            <input type="hidden" name="id" value="@Model.Id" />
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-arrow-counterclockwise"></i> Mark as Unpaid
            </button>
        </form>
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="PaidAmount" />
    <input type="hidden" asp-for="Status" />

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Error:</strong>
            @foreach (var error in ViewData.ModelState[""].Errors)
            {
                <div>@error.ErrorMessage</div>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <!-- Invoice Information -->
                <div class="col-md-6">
                    <h5 class="mb-3">Invoice Information</h5>

                    <div class="mb-3">
                        <label asp-for="InvoiceNumber" class="form-label"></label>
                        <input asp-for="InvoiceNumber" class="form-control" required />
                        <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InvoiceDate" class="form-label"></label>
                        <input asp-for="InvoiceDate" class="form-control" type="date" required />
                        <span asp-validation-for="InvoiceDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InvoiceType" class="form-label">Invoice Type</label>
                        <select asp-for="InvoiceType" class="form-select" id="invoiceTypeSelect">
                            <option value="Supplier" @(Model.InvoiceType == "Supplier" || Model.InvoiceType == "Payable"
                                                                                     ? "selected" : "")>Supplier Invoice (Payable - from supplier to us)</option>
                            <option value="Customer" @(Model.InvoiceType == "Customer" || Model.InvoiceType ==
                                                                                     "Receivable" ? "selected" : "")>Customer Invoice (Receivable - from us to customer)
                            </option>
                        </select>
                        <small class="form-text text-muted">Select Supplier if this invoice is FROM a supplier TO your
                            organization</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label"></label>
                        <input asp-for="DueDate" class="form-control" type="date" required />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <!-- Customer/Supplier Information -->
                <div class="col-md-6">
                    <h5 class="mb-3" id="partyInfoHeader">@(isSupplierInvoice ? "Supplier" : "Customer") Information
                    </h5>
                    <small class="text-muted d-block mb-3" id="partyInfoHint">@(isSupplierInvoice ? "Supplier details                      (who is billing you)" : "Customer details (who you are billing)")</small>

                    <!-- Supplier Selection (shown when Supplier invoice type) -->
                    <div class="mb-3" id="supplierSelectSection" style="@(isSupplierInvoice ? "" : "display:none")">
                        <label asp-for="SupplierId" class="form-label">Supplier</label>
                        <select asp-for="SupplierId" class="form-select" id="supplierSelect"
                            onchange="updateSupplierInfo()">
                            <option value="">-- Select Supplier --</option>
                            @foreach (var supplier in suppliers)
                            {
                                if (Model.SupplierId == supplier.Id)
                                {
                                    <option value="@supplier.Id" data-name="@supplier.SupplierName"
                                        data-address="@supplier.Address" data-email="@supplier.Email"
                                        data-phone="@supplier.Phone" selected>@supplier.SupplierName</option>
                                }
                                else
                                {
                                    <option value="@supplier.Id" data-name="@supplier.SupplierName"
                                        data-address="@supplier.Address" data-email="@supplier.Email"
                                        data-phone="@supplier.Phone">@supplier.SupplierName</option>
                                }
                            }
                        </select>
                        <small class="form-text text-muted">Or enter manually below if supplier is not in the
                            list</small>
                    </div>

                    <!-- Customer Selection (shown when Customer invoice type) -->
                    <div class="mb-3" id="customerSelectSection" style="@(!isSupplierInvoice ? "" : "display:none")">
                        <label asp-for="CustomerId" class="form-label">Customer</label>
                        <select asp-for="CustomerId" class="form-select" id="customerSelect"
                            onchange="updateCustomerInfo()">
                            <option value="">-- Select Customer --</option>
                            @foreach (var customer in customers)
                            {
                                if (Model.CustomerId == customer.Id)
                                {
                                    <option value="@customer.Id" data-name="@customer.CustomerName"
                                        data-address="@customer.Address" data-email="@customer.Email"
                                        data-phone="@customer.Phone" selected>@customer.CustomerName</option>
                                }
                                else
                                {
                                    <option value="@customer.Id" data-name="@customer.CustomerName"
                                        data-address="@customer.Address" data-email="@customer.Email"
                                        data-phone="@customer.Phone">@customer.CustomerName</option>
                                }
                            }
                        </select>
                        <small class="form-text text-muted">Or enter manually below if customer is not in the
                            list</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label" id="customerNameLabel">@(isSupplierInvoice ?
                                                        "Supplier Name (Manual Entry)" : "Customer Name")</label>
                        <div class="input-group">
                            <input asp-for="CustomerName" class="form-control" id="CustomerName" />
                            <button type="button" class="btn btn-success" id="createSupplierBtn"
                                onclick="createNewSupplier()" title="Create new supplier from entered details"
                                style="@(isSupplierInvoice && !Model.SupplierId.HasValue ? "" : "display:none")">
                                <i class="bi bi-plus-circle"></i> Create Supplier
                            </button>
                            <button type="button" class="btn btn-primary" id="createCustomerBtn"
                                onclick="createNewCustomer()" title="Create new customer from entered details"
                                style="@(!isSupplierInvoice && !Model.CustomerId.HasValue ? "" : "display:none")">
                                <i class="bi bi-plus-circle"></i> Create Customer
                            </button>
                        </div>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                        <small class="form-text text-muted" id="createSupplierHint"
                            style="@(isSupplierInvoice && !Model.SupplierId.HasValue ? "" : "display:none")">
                            Click "Create Supplier" to add this as a new supplier to your supplier list
                        </small>
                        <small class="form-text text-muted" id="createCustomerHint"
                            style="@(!isSupplierInvoice && !Model.CustomerId.HasValue ? "" : "display:none")">
                            Click "Create Customer" to add this as a new customer to your customer list
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerAddress" class="form-label"
                            id="customerAddressLabel">@(isSupplierInvoice ? "Supplier Address" : "Customer                           Address")</label>
                        <textarea asp-for="CustomerAddress" class="form-control" rows="2"
                            id="CustomerAddress"></textarea>
                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerEmail" class="form-label" id="customerEmailLabel">@(isSupplierInvoice ?
                                                        "Supplier Email" : "Customer Email")</label>
                        <input asp-for="CustomerEmail" class="form-control" type="email" id="CustomerEmail" />
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerPhone" class="form-label" id="customerPhoneLabel">@(isSupplierInvoice ?
                                                        "Supplier Phone" : "Customer Phone")</label>
                        <input asp-for="CustomerPhone" class="form-control" id="CustomerPhone" />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Line Items -->
            <hr class="my-4" />
            <h5 class="mb-3">Invoice Items</h5>

            <div id="invoiceItems">
                @if (Model.InvoiceItems != null && Model.InvoiceItems.Any())
                {
                    for (int i = 0; i < Model.InvoiceItems.Count; i++)
                    {
                        <div class="row mb-3 invoice-item">
                            <input type="hidden" name="items[@i].Id" value="@Model.InvoiceItems.ElementAt(i).Id" />
                            <input type="hidden" name="items[@i].InvoiceId"
                                value="@Model.InvoiceItems.ElementAt(i).InvoiceId" />
                            <div class="col-md-5">
                                <label class="form-label">Description</label>
                                <input type="text" name="items[@i].Description"
                                    value="@Model.InvoiceItems.ElementAt(i).Description" class="form-control item-description"
                                    required />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Quantity</label>
                                <input type="number" name="items[@i].Quantity" value="@Model.InvoiceItems.ElementAt(i).Quantity"
                                    class="form-control item-quantity" min="1" onchange="calculateLineTotal(this)" required />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Unit Price</label>
                                <input type="number" name="items[@i].UnitPrice"
                                    value="@Model.InvoiceItems.ElementAt(i).UnitPrice" class="form-control item-price"
                                    step="0.0001" min="0" onchange="calculateLineTotal(this)" required />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Total</label>
                                <input type="text" value="@Model.InvoiceItems.ElementAt(i).TotalPrice.ToString("N2")"
                                    class="form-control line-total" readonly />
                            </div>
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeItem(this)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>

            <button type="button" class="btn btn-secondary mb-3" onclick="addNewItem()">
                <i class="bi bi-plus-circle"></i> Add Item
            </button>

            <!-- Summary -->
            <div class="row mt-4">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>Invoice Summary</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span id="displaySubtotal">@FormatCurrency(Model.SubTotal)</span>
                            </div>

                            <!-- GST Toggle and Custom Rate -->
                            <div class="mb-2">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="gstEnabled" name="GSTEnabled"
                                        value="true" @(Model.GSTEnabled ? "checked" : "")
                                        onchange="updateGSTSettings()">
                                    <input type="hidden" name="GSTEnabled" value="false" id="gstEnabledHidden"
                                        @(Model.GSTEnabled ? "disabled" : "")>
                                    <label class="form-check-label" for="gstEnabled">Include GST</label>
                                </div>
                            </div>
                            <div id="gstRateSection" class="mb-2" style="@(Model.GSTEnabled ? "" : "display:none")">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">GST Rate</span>
                                    <input type="number" class="form-control" id="gstRateInput" name="GSTRate"
                                        value="@Model.GSTRate" min="0" max="100" step="0.1"
                                        onchange="calculateGrandTotal()">
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mb-2" id="gstRow"
                                style="@(Model.GSTEnabled ? "" : "display:none")">
                                <span>GST (<span id="gstRateDisplay">@Model.GSTRate</span>%):</span>
                                <span id="displayGST">@FormatCurrency(Model.GSTAmount)</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <span><strong>Total Amount:</strong></span>
                                <strong id="displayTotal">@FormatCurrency(Model.TotalAmount)</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Paid Amount:</span>
                                <strong class="text-success">@FormatCurrency(Model.PaidAmount)</strong>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between">
                                <span><strong>Balance:</strong></span>
                                <strong class="text-danger"
                                    id="displayBalance">@FormatCurrency(Model.BalanceAmount)</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-lg" id="saveButton"
                onclick="console.log('Save button clicked!');">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </div>
</form>

<!-- Payment Allocations Section -->
@if (Model.BalanceAmount > 0)
{
    <div class="card shadow mt-4">
        <div class="card-header bg-success text-white">
            <h5 class="m-0"><i class="bi bi-cash-coin"></i> Payment Allocations</h5>
        </div>
        <div class="card-body">
            @* Show error/success messages prominently in the allocation section *@
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Allocation Error:</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (Model.PaymentAllocations != null && Model.PaymentAllocations.Any())
            {
                <h6 class="mb-3"><i class="bi bi-link-45deg"></i> Current Payment Allocations</h6>
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle"></i> <strong>Tip:</strong> You can unallocate any payment to make it available
                    for other invoices.
                </div>
                <div class="table-responsive mb-4">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Payment #</th>
                                <th>Payment Date</th>
                                <th>Payment Method</th>
                                <th>Amount Allocated</th>
                                <th>Allocation Date</th>
                                <th>Notes</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var allocation in Model.PaymentAllocations)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Payments" asp-action="Details" asp-route-id="@allocation.PaymentId"
                                            class="text-decoration-none">
                                            <i class="bi bi-receipt"></i> <strong>@allocation.Payment?.PaymentNumber</strong>
                                        </a>
                                    </td>
                                    <td>@allocation.Payment?.PaymentDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-secondary">@allocation.Payment?.PaymentMethod</span>
                                    </td>
                                    <td><strong class="text-success">@FormatCurrency(allocation.AllocatedAmount)</strong></td>
                                    <td>@allocation.AllocationDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@(allocation.Notes ?? "-")</td>
                                    <td>
                                        <form asp-controller="Invoices" asp-action="RemovePaymentAllocation" method="post"
                                            class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="allocationId" value="@allocation.Id" />
                                            <input type="hidden" name="invoiceId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning"
                                                onclick="return confirm('Unallocate this payment? This will make the payment available for other invoices and update this invoice balance.')">
                                                <i class="bi bi-arrow-counterclockwise"></i> Unallocate
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3"><strong>Total Allocated to this Invoice:</strong></td>
                                <td colspan="4"><strong class="text-success">@FormatCurrency(Model.PaidAmount)</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }

            @if (availablePayments.Any())
            {
                <h6 class="mb-3">
                    <i class="bi bi-plus-circle"></i> Allocate Payment to This Invoice
                </h6>
                <form asp-controller="Invoices" asp-action="AllocatePayment" method="post" id="allocationForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="invoiceId" value="@Model.Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="paymentId" class="form-label">Select Payment</label>
                            <select name="paymentId" id="paymentId" class="form-select" required onchange="updatePaymentInfo()">
                                <option value="">-- Select a Payment --</option>
                                @foreach (var payment in availablePayments)
                                {
                                    <option value="@payment.Id" data-amount="@payment.Amount"
                                        data-unallocated="@payment.UnallocatedAmount"
                                        data-date="@payment.PaymentDate.ToString("dd/MM/yyyy")" data-method="@payment.PaymentMethod"
                                        data-number="@payment.PaymentNumber">
                                        @payment.PaymentNumber - @payment.PaymentDate.ToString("dd/MM/yyyy") (Unallocated:
                                        @FormatCurrency(payment.UnallocatedAmount))
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="amount" class="form-label">Amount to Allocate</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" name="amount" id="amount" class="form-control" step="0.01" min="0.01"
                                    value="@Math.Round(Model.BalanceAmount, 2)" required />
                            </div>
                            <small class="form-text text-muted">
                                Max: @FormatCurrency(Model.BalanceAmount) (invoice balance)
                            </small>
                        </div>
                    </div>

                    <div class="mb-3" id="paymentInfo" style="display: none;">
                        <div class="alert alert-secondary">
                            <strong>Payment Details:</strong><br />
                            <span id="paymentDetails"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes (Optional)</label>
                        <textarea name="notes" id="notes" class="form-control" rows="2"
                    placeholder="Add any notes about this allocation"></textarea>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Allocate Payment to Invoice
                    </button>
                </form>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> No available payments to allocate. All payments are either fully allocated
                    or there are no unallocated payments in the system.
                </div>
            }
        </div>
    </div>
}
else if (Model.BalanceAmount <= 0)
{
    <div class="alert alert-success mt-4">
        <i class="bi bi-check-circle-fill"></i> <strong>Invoice Fully Paid!</strong> This invoice has been fully paid.
    </div>
}

@section Scripts {
    <script>
        let itemCounter = @(Model.InvoiceItems?.Count ?? 0);
        const paidAmount = @Model.PaidAmount;

        function addNewItem() {
            const itemsContainer = document.getElementById('invoiceItems');
            console.log('Adding item with index:', itemCounter);
            const newItem = `
                                                                                        <div class="row mb-3 invoice-item">
                                                                                            <input type="hidden" name="items[${itemCounter}].Id" value="0" />
                                                                                            <input type="hidden" name="items[${itemCounter}].InvoiceId" value="@Model.Id" />
                                                                                            <div class="col-md-5">
                                                                                                <label class="form-label">Description</label>
                                                                                                <input type="text" name="items[${itemCounter}].Description" class="form-control item-description" required />
                                                                                            </div>
                                                                                            <div class="col-md-2">
                                                                                                <label class="form-label">Quantity</label>
                                                                                                <input type="number" name="items[${itemCounter}].Quantity" class="form-control item-quantity" min="1" value="1" onchange="calculateLineTotal(this)" required />
                                                                                            </div>
                                                                                            <div class="col-md-2">
                                                                                                <label class="form-label">Unit Price</label>
                                                                                                <input type="number" name="items[${itemCounter}].UnitPrice" class="form-control item-price" step="0.0001" min="0" value="0" onchange="calculateLineTotal(this)" required />
                                                                                            </div>
                                                                                            <div class="col-md-2">
                                                                                                <label class="form-label">Total</label>
                                                                                                <input type="text" class="form-control line-total" value="0.00" readonly />
                                                                                            </div>
                                                                                            <div class="col-md-1 d-flex align-items-end">
                                                                                                <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeItem(this)">
                                                                                                    <i class="bi bi-trash"></i>
                                                                                                </button>
                                                                                            </div>
                                                                                        </div>
                                                                                    `;
            itemsContainer.insertAdjacentHTML('beforeend', newItem);
            itemCounter++;
            console.log('Item added, new counter:', itemCounter);
            console.log('Total items now:', document.querySelectorAll('.invoice-item').length);
            calculateGrandTotal();
