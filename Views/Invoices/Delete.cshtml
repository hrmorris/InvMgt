@model Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}
@functions {
    public string FormatCurrency(decimal amount)
    {
        var settings = ViewData["CurrencySettings"] as CurrencySettings;
        if (settings != null)
        {
            return CurrencyHelper.FormatCurrency(amount, settings);
        }
        return $"K {amount:N2}";
    }
    public string CurrencySymbol()
    {
        return ViewData["CurrencySymbol"]?.ToString() ?? "K";
    }
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger"><i class="bi bi-trash"></i> Delete Invoice</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="alert alert-danger">
    <h5><i class="bi bi-exclamation-triangle-fill"></i> Warning</h5>
    <p>Are you sure you want to delete this invoice? This action cannot be undone.</p>
</div>

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h6 class="m-0">Invoice to be deleted</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Invoice Number</dt>
            <dd class="col-sm-9">@Model.InvoiceNumber</dd>

            <dt class="col-sm-3">Invoice Date</dt>
            <dd class="col-sm-9">@Model.InvoiceDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">@FormatCurrency(Model.TotalAmount)</dd>

            <dt class="col-sm-3">Paid Amount</dt>
            <dd class="col-sm-9">@FormatCurrency(Model.PaidAmount)</dd>

            <dt class="col-sm-3">Balance</dt>
            <dd class="col-sm-9"><strong>@FormatCurrency(Model.BalanceAmount)</strong></dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span></dd>
        </dl>

        @if (Model.InvoiceItems.Any())
        {
            <hr />
            <h6>Invoice Items (@Model.InvoiceItems.Count)</h6>
            <ul>
                @foreach (var item in Model.InvoiceItems)
                {
                    <li>@item.Description - Qty: @item.Quantity Ã— @FormatCurrency(item.UnitPrice) = @FormatCurrency(item.TotalPrice)</li>
                }
            </ul>
        }

        @if (Model.Payments.Any())
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i> <strong>This invoice has @Model.Payments.Count payment(s) associated with it.</strong> 
                Deleting this invoice will also remove these payment records.
            </div>
        }

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Yes, Delete Invoice
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>

