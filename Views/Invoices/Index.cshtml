@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "Invoices";
    var activeTab = ViewBag.ActiveTab ?? "all";
}
@functions {
    public string FormatCurrency(decimal amount)
    {
        var settings = ViewData["CurrencySettings"] as CurrencySettings;
        if (settings != null)
        {
            return CurrencyHelper.FormatCurrency(amount, settings);
        }
        return $"K {amount:N2}";
    }
    public string CurrencySymbol()
    {
        return ViewData["CurrencySymbol"]?.ToString() ?? "K";
    }
}

@{
    var supplierInvoices = Model.Where(i => i.InvoiceType == "Supplier" || i.SupplierId.HasValue).ToList();
    var customerInvoices = Model.Where(i => i.InvoiceType == "Customer" && !i.SupplierId.HasValue).ToList();

    var supplierGroups = supplierInvoices
    .GroupBy(i => i.Supplier?.SupplierName ?? i.CustomerName)
    .Select(g => new
    {
        Name = g.Key,
        InvoiceCount = g.Count(),
        TotalAmount = g.Sum(i => i.TotalAmount),
        PaidAmount = g.Sum(i => i.PaidAmount),
        BalanceAmount = g.Sum(i => i.BalanceAmount),
        OverdueCount = g.Count(i => i.DueDate < DateTime.Now && i.Status != "Paid"),
        Invoices = g.OrderByDescending(i => i.InvoiceDate).ToList()
    })
    .OrderByDescending(s => s.BalanceAmount)
    .ToList();

    var customerGroups = customerInvoices
    .GroupBy(i => i.CustomerName)
    .Select(g => new
    {
        Name = g.Key,
        InvoiceCount = g.Count(),
        TotalAmount = g.Sum(i => i.TotalAmount),
        PaidAmount = g.Sum(i => i.PaidAmount),
        BalanceAmount = g.Sum(i => i.BalanceAmount),
        OverdueCount = g.Count(i => i.DueDate < DateTime.Now && i.Status != "Paid"),
        Invoices = g.OrderByDescending(i => i.InvoiceDate).ToList()
    })
    .OrderByDescending(s => s.BalanceAmount)
    .ToList();
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-file-earmark-text"></i> Invoices</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Invoice
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
