                                                var isOverdue = invoice.DueDate < DateTime.Now && invoice.Status != "Paid";
                                                <tr class="@(isOverdue ? "table-danger" : "")">
                                                    <td><a asp-action="Details"
                                                            asp-route-id="@invoice.Id">@invoice.InvoiceNumber</a></td>
                                                    <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                                    <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-end">@FormatCurrency(invoice.TotalAmount)</td>
                                                    <td class="text-end">@FormatCurrency(invoice.PaidAmount)</td>
                                                    <td class="text-end"><strong>@FormatCurrency(invoice.BalanceAmount)</strong>
                                                    </td>
                                                    <td><span
                                                            class="status-badge status-@invoice.Status.ToLower()">@invoice.Status</span>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a asp-action="Details" asp-route-id="@invoice.Id"
                                                                class="btn btn-outline-primary" title="View">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a asp-controller="Payments" asp-action="Create"
                                                                asp-route-invoiceId="@invoice.Id" class="btn btn-outline-success"
                                                                title="Pay">
                                                                <i class="bi bi-credit-card"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Supplier Totals -->
            <div class="card bg-warning bg-opacity-10 border-warning mt-3">
                <div class="card-body py-2">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <strong><i class="bi bi-building"></i> Total Supplier Invoices: @supplierInvoices.Count</strong>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="me-4">Total: <strong>@FormatCurrency(supplierInvoices.Sum(i =>
                                                                    i.TotalAmount))</strong></span>
                        <span>Outstanding: <strong class="text-danger">@FormatCurrency(supplierInvoices.Sum(i =>
                                                                i.BalanceAmount))</strong></span>
                    </div>
                </div>
            </div>
        </div>
                }
    </div>

    <!-- By Customers Tab -->
    <div class="tab-pane fade" id="by-customers" role="tabpanel" aria-labelledby="customers-tab">
        @if (!customerGroups.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No customer invoices found.
            </div>
        }
        else
        {
            <div class="accordion" id="customerAccordion">
                @foreach (var customer in customerGroups)
                {
                    var accordionId = $"customer-{customer.Name.GetHashCode()}";
                    var hasOutstanding = customer.BalanceAmount > 0;
                    var hasOverdue = customer.OverdueCount > 0;
                    var cardClass = hasOverdue ? "border-danger" : hasOutstanding ? "border-warning" : "border-success";

                    <div class="card @cardClass shadow-sm mb-2">
                        <div class="card-header py-2" id="heading-@accordionId">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <button class="btn btn-link text-decoration-none text-dark p-0 me-3" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#collapse-@accordionId">
                                        <i class="bi bi-chevron-down"></i>
                                    </button>
                                    <div>
                                        <h6 class="mb-0">
                                            <i class="bi bi-person me-2 text-info"></i>
                                            @customer.Name
