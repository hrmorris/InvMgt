                                    <div class="text-center">
                                        <small class="text-muted d-block">Total</small>
                                        <strong>@FormatCurrency(customer.TotalAmount)</strong>
                                    </div>
                                    <div class="text-center">
                                        <small class="text-muted d-block">Outstanding</small>
                                        <strong
                                            class="@(hasOverdue ? "text-danger" : hasOutstanding ? "text-warning" : "text-success")">
                                            @FormatCurrency(customer.BalanceAmount)
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="collapse-@accordionId" class="collapse" data-bs-parent="#customerAccordion">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Invoice #</th>
                                                <th>Date</th>
                                                <th>Due Date</th>
                                                <th class="text-end">Total</th>
                                                <th class="text-end">Paid</th>
                                                <th class="text-end">Balance</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var invoice in customer.Invoices)
                                            {
                                                var isOverdue = invoice.DueDate < DateTime.Now && invoice.Status != "Paid";
                                                <tr class="@(isOverdue ? "table-danger" : "")">
                                                    <td><a asp-action="Details"
                                                            asp-route-id="@invoice.Id">@invoice.InvoiceNumber</a></td>
                                                    <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                                    <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-end">@FormatCurrency(invoice.TotalAmount)</td>
                                                    <td class="text-end">@FormatCurrency(invoice.PaidAmount)</td>
                                                    <td class="text-end"><strong>@FormatCurrency(invoice.BalanceAmount)</strong>
                                                    </td>
                                                    <td><span
                                                            class="status-badge status-@invoice.Status.ToLower()">@invoice.Status</span>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a asp-action="Details" asp-route-id="@invoice.Id"
                                                                class="btn btn-outline-primary" title="View">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a asp-controller="Payments" asp-action="Create"
