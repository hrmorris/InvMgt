    </div>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs mb-3" id="invoiceTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all-invoices" type="button"
            role="tab" aria-controls="all-invoices" aria-selected="true">
            <i class="bi bi-list-ul"></i> All Invoices <span class="badge bg-secondary">@Model.Count()</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="suppliers-tab" data-bs-toggle="tab" data-bs-target="#by-suppliers" type="button"
            role="tab" aria-controls="by-suppliers" aria-selected="false">
            <i class="bi bi-building"></i> By Supplier <span
                class="badge bg-warning text-dark">@supplierGroups.Count</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="customers-tab" data-bs-toggle="tab" data-bs-target="#by-customers" type="button"
            role="tab" aria-controls="by-customers" aria-selected="false">
            <i class="bi bi-people"></i> By Customer <span class="badge bg-info">@customerGroups.Count</span>
        </button>
    </li>
</ul>

<div class="tab-content" id="invoiceTabsContent">
    <!-- All Invoices Tab -->
    <div class="tab-pane fade show active" id="all-invoices" role="tabpanel" aria-labelledby="all-tab">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <form asp-action="Index" method="get" class="row g-3">
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="searchTerm"
                            placeholder="Search by invoice number, customer name, or email..."
                            value="@ViewBag.SearchTerm" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Due Date</th>
                                <th>Supplier/Customer</th>
                                <th>Total Amount</th>
                                <th>Paid Amount</th>
                                <th>Balance</th>
                                <th>Status</th>
                                <th>Docs</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var isSupplierInvoice = item.InvoiceType == "Supplier" || item.SupplierId.HasValue;
                                var hasDocuments = item.ImportedDocuments != null && item.ImportedDocuments.Any();
                                <tr>
                                    <td><a asp-action="Details" asp-route-id="@item.Id">@item.InvoiceNumber</a></td>
                                    <td>
                                        @if (isSupplierInvoice)
                                        {
                                            <span class="badge bg-warning text-dark" title="Accounts Payable">Supplier</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info" title="Accounts Receivable">Customer</span>
                                        }
                                    </td>
                                    <td>@item.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.DueDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CustomerName</td>
                                    <td>@FormatCurrency(item.TotalAmount)</td>
                                    <td>@FormatCurrency(item.PaidAmount)</td>
                                    <td><strong>@FormatCurrency(item.BalanceAmount)</strong></td>
                                    <td><span class="status-badge status-@item.Status.ToLower()">@item.Status</span></td>
                                    <td class="text-center">
                                        @if (hasDocuments)
                                        {
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-success"
                                                title="@item.ImportedDocuments.Count document(s) linked">
                                                <i class="bi bi-file-earmark-check fs-5"></i>
                                                <span class="badge bg-success rounded-pill">@item.ImportedDocuments.Count</span>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted" title="No documents linked">
                                                <i class="bi bi-file-earmark-x"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="GeneratePdf" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-success" title="Download PDF">
                                                <i class="bi bi-file-pdf"></i>
                                            </a>
                                            <a asp-controller="Payments" asp-action="Create" asp-route-invoiceId="@item.Id"
                                                class="btn btn-sm btn-outline-info" title="Add Payment">
                                                <i class="bi bi-credit-card"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- By Suppliers Tab -->
