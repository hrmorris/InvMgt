                                    </div>
                                </div>
                                <div class="d-flex gap-3 align-items-center">
                                    <div class="text-center">
                                        <small class="text-muted d-block">Invoices</small>
                                        <span class="badge bg-secondary">@customer.InvoiceCount</span>
                                    </div>
                                    @if (customer.OverdueCount > 0)
                                    {
