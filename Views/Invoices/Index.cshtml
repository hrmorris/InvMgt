        </div>
                }
    </div>
</div>

@section Scripts {
    <script>
        // Toggle chevron icon on accordion
        document.querySelectorAll('.accordion-collapse, .collapse').forEach(function (collapse) {
            collapse.addEventListener('show.bs.collapse', function () {
                var btn = document.querySelector('[data-bs-target="#' + this.id + '"] i');
                if (btn) btn.classList.replace('bi-chevron-down', 'bi-chevron-up');
            });
            collapse.addEventListener('hide.bs.collapse', function () {
                var btn = document.querySelector('[data-bs-target="#' + this.id + '"] i');
                if (btn) btn.classList.replace('bi-chevron-up', 'bi-chevron-down');
            });
        });
    </script>
}