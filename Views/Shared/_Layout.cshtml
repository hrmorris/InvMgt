                        }
                    </div>
                </nav>
            }

            <main role="main" class="@(isLoggedIn ? "col-md-9 ms-sm-auto col-lg-10 px-md-4" : "col-12 px-md-4")">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    @if (showFooter && isLoggedIn)
    {
        <footer class="border-top mt-4" style="margin-left: 240px; background: linear-gradient(135deg, #f8fafc, #f1f5f9); border-color: #e2e8f0 !important;">
            @if (showFooterCompanyInfo && (!string.IsNullOrEmpty(companyAddress) || !string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)))
            {
                <div class="container-fluid px-4 pt-3 pb-2">
                    <div class="row g-2" style="font-size: 0.8rem;">
                        @if (!string.IsNullOrEmpty(companyAddress))
                        {
                            <div class="col-auto">
                                <span class="text-muted"><i class="bi bi-geo-alt-fill me-1" style="color: @primaryColor;"></i> @companyAddress</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(companyPhone))
                        {
                            <div class="col-auto">
                                <span class="text-muted"><i class="bi bi-telephone-fill me-1" style="color: @primaryColor;"></i> <a href="tel:@companyPhone" class="text-muted text-decoration-none">@companyPhone</a></span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(companyEmail))
                        {
                            <div class="col-auto">
                                <span class="text-muted"><i class="bi bi-envelope-fill me-1" style="color: @primaryColor;"></i> <a href="mailto:@companyEmail" class="text-muted text-decoration-none">@companyEmail</a></span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(companyWebsite))
                        {
                            <div class="col-auto">
                                <span class="text-muted"><i class="bi bi-globe me-1" style="color: @primaryColor;"></i> <a href="@companyWebsite" target="_blank" class="text-muted text-decoration-none">@companyWebsite</a></span>
                            </div>
                        }
                    </div>
                </div>
            }
            <div class="container-fluid px-4 py-2">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div class="d-flex align-items-center gap-3">
                        <small class="text-muted" style="font-size: 0.8rem;">@footerText</small>
                        @{
                            try {
                                if (!string.IsNullOrEmpty(footerLeftLinks) && footerLeftLinks.StartsWith("[")) {
                                    var links = System.Text.Json.JsonSerializer.Deserialize<List<Dictionary<string, string>>>(footerLeftLinks);
                                    if (links != null) {
                                        foreach (var link in links) {
                                            <a href="@link.GetValueOrDefault("url", "#")" class="text-muted text-decoration-none ms-2"><small>@link.GetValueOrDefault("text", "")</small></a>
                                        }
                                    }
                                }
                            } catch { }
                        }
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        @if (showFooterSocialLinks)
                        {
                            @if (!string.IsNullOrEmpty(socialFacebook))
                            {
                                <a href="@socialFacebook" target="_blank" class="text-muted" title="Facebook" style="font-size: 1rem;"><i class="bi bi-facebook"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(socialTwitter))
                            {
                                <a href="@socialTwitter" target="_blank" class="text-muted" title="Twitter" style="font-size: 1rem;"><i class="bi bi-twitter-x"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(socialLinkedIn))
                            {
                                <a href="@socialLinkedIn" target="_blank" class="text-muted" title="LinkedIn" style="font-size: 1rem;"><i class="bi bi-linkedin"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(socialInstagram))
                            {
                                <a href="@socialInstagram" target="_blank" class="text-muted" title="Instagram" style="font-size: 1rem;"><i class="bi bi-instagram"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(socialYouTube))
                            {
                                <a href="@socialYouTube" target="_blank" class="text-muted" title="YouTube" style="font-size: 1rem;"><i class="bi bi-youtube"></i></a>
                            }
                        }
                        @{
                            try {
                                if (!string.IsNullOrEmpty(footerRightLinks) && footerRightLinks.StartsWith("[")) {
                                    var rlinks = System.Text.Json.JsonSerializer.Deserialize<List<Dictionary<string, string>>>(footerRightLinks);
                                    if (rlinks != null) {
                                        foreach (var rlink in rlinks) {
                                            <a href="@rlink.GetValueOrDefault("url", "#")" class="text-muted text-decoration-none"><small>@rlink.GetValueOrDefault("text", "")</small></a>
                                        }
                                    }
                                }
                            } catch { }
                        }
                        @if (footerShowVersion)
                        {
                            <small class="text-muted"><i class="bi bi-code-slash me-1"></i>v2.5.0</small>
                        }
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/js/progress-modal.js"></script>
    <script src="~/js/date-picker.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>