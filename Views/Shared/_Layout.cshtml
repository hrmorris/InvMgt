@{
    var appName = ViewData["AppName"] as string ?? "Invoice Management System";
    var faviconUrl = ViewData["Branding_FaviconUrl"] as string ?? "";
    var logoUrl = ViewData["Branding_LogoUrl"] as string ?? "";
    var primaryColor = ViewData["Theme_PrimaryColor"] as string ?? "#0d6efd";
    var secondaryColor = ViewData["Theme_SecondaryColor"] as string ?? "#6c757d";
    var accentColor = ViewData["Theme_AccentColor"] as string ?? "#198754";
    var dangerColor = ViewData["Theme_DangerColor"] as string ?? "#dc3545";
    var warningColor = ViewData["Theme_WarningColor"] as string ?? "#ffc107";
    var navbarStyle = ViewData["Theme_NavbarStyle"] as string ?? "bg-primary";
    var sidebarStyle = ViewData["Theme_SidebarStyle"] as string ?? "light";
    var fontFamily = ViewData["Theme_FontFamily"] as string ?? "Segoe UI";
    var showSearch = ViewData["Header_ShowSearch"] is bool hs ? hs : true;
    var showQuickAdd = ViewData["Header_ShowQuickAdd"] is bool qa ? qa : true;
    var announcementText = ViewData["Header_AnnouncementText"] as string ?? "";
    var announcementType = ViewData["Header_AnnouncementType"] as string ?? "info";
    var showFooter = ViewData["Footer_Show"] is bool sf ? sf : true;
    var footerText = (ViewData["Footer_Text"] as string ?? "Â© {year} Invoice Management System. All rights reserved.").Replace("{year}", DateTime.Now.Year.ToString());
    var footerShowVersion = ViewData["Footer_ShowVersion"] is bool fv ? fv : true;
    var footerLeftLinks = ViewData["Footer_LeftLinks"] as string ?? "";
    var footerRightLinks = ViewData["Footer_RightLinks"] as string ?? "";

    var navbarBg = navbarStyle switch {
        "bg-dark" => "#212529",
        "bg-success" => accentColor,
        "bg-purple" => "#6f42c1",
        "bg-danger" => dangerColor,
        "bg-gradient-primary" => primaryColor,
        _ => primaryColor
    };
    var navbarGradient = navbarStyle == "bg-gradient-primary"
        ? $"linear-gradient(135deg, {primaryColor}, {accentColor})"
        : navbarBg;

    var isLoggedIn = Context.Session.GetInt32("UserId").HasValue;
    var userRole = Context.Session.GetString("Role") ?? "";
    var isAdmin = userRole == "Admin" || userRole == "SystemAdmin";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    @if (!string.IsNullOrEmpty(faviconUrl))
    {
        <link rel="icon" href="@faviconUrl" />
    }
    else
    {
        <link rel="icon" type="image/svg+xml"
              href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“„</text></svg>">
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    @if (fontFamily != "Segoe UI" && fontFamily != "system-ui")
    {
        <link href="https://fonts.googleapis.com/css2?family=@(fontFamily.Replace(" ", "+"))&display=swap" rel="stylesheet">
    }
    <style>
        :root {
            --primary-color: @primaryColor;
            --secondary-color: @secondaryColor;
            --success-color: @accentColor;
            --danger-color: @dangerColor;
            --warning-color: @warningColor;
        }

        body {
            font-family: '@fontFamily', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 56px;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background-color: @(sidebarStyle == "dark" ? "#1e293b" : "#f8f9fa");
        }

        .sidebar-sticky {
            position: relative;
            top: 0;
            height: calc(100vh - 56px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .sidebar .nav-link {
            font-weight: 500;
            color: @(sidebarStyle == "dark" ? "#cbd5e1" : "#333");
            padding: 12px 20px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            color: var(--primary-color);
            background-color: @(sidebarStyle == "dark" ? "#334155" : "#e9ecef");
        }

        .sidebar .nav-link.active {
            color: var(--primary-color);
            background-color: @(sidebarStyle == "dark" ? "#1e3a5f" : "#e7f1ff");
            border-left: 3px solid var(--primary-color);
        }

        .sidebar .nav-link i {
            margin-right: 8px;
        }

        main {
            margin-left: 240px;
            padding: 20px;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
        }

        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, .1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .stat-card {
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .btn {
            border-radius: 6px;
            padding: 8px 16px;
            font-weight: 500;
        }

        .table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
        }

        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 500;
        }

        .status-paid {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-unpaid {
            background-color: #f8d7da;
            color: #842029;
        }

        .status-partial {
            background-color: #fff3cd;
            color: #664d03;
        }

        .status-overdue {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>

<body>
    
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top shadow" style="background: @(navbarStyle == "bg-gradient-primary" ? navbarGradient : navbarBg);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                @if (!string.IsNullOrEmpty(logoUrl))
                {
                    <img src="@logoUrl" alt="@appName" style="height: 28px; max-width: 140px; object-fit: contain;" class="me-2" />
                }
                else
                {
                    <i class="bi bi-receipt me-2"></i>
                }
                @appName
            </a>

            @if (isLoggedIn)
            {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNavbar">
                    <!-- Main Navigation Links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-file-earmark-text"></i> Invoices
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Invoices" asp-action="Index"><i
                                            class="bi bi-list"></i> All Invoices</a></li>
                                <li><a class="dropdown-item" asp-controller="Invoices" asp-action="Create"><i
                                            class="bi bi-plus-circle"></i> New Invoice</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" asp-controller="Invoices" asp-action="Overdue"><i
                                            class="bi bi-exclamation-triangle text-warning"></i> Overdue</a></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Invoices"
                                        asp-action="OverAllocated"><i class="bi bi-exclamation-triangle-fill"></i>
                                        Over-Allocated</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-credit-card"></i> Payments
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Payments" asp-action="Index"><i
                                            class="bi bi-list"></i> All Payments</a></li>
                                <li><a class="dropdown-item" asp-controller="Payments" asp-action="Create"><i
                                            class="bi bi-plus-circle"></i> New Payment</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="BatchPayments" asp-action="Index"><i
                                            class="bi bi-layers"></i> Batch Payments</a></li>
                                <li><a class="dropdown-item" asp-controller="BatchPayments" asp-action="Create"><i
                                            class="bi bi-plus-square"></i> New Batch</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-graph-up"></i> Reports
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-cart-check"></i> Procurement
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Requisitions" asp-action="Index"><i
                                            class="bi bi-file-earmark-check"></i> Requisitions</a></li>
                                <li><a class="dropdown-item" asp-controller="Requisitions" asp-action="PendingApprovals"><i
                                            class="bi bi-hourglass-split"></i> Pending Approvals</a></li>
                                <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Index"><i
                                            class="bi bi-cart-check"></i> Purchase Orders</a></li>
                            </ul>
                        </li>
                    </ul>

                    @if (showSearch)
                    {
                    <!-- Search Bar -->
                    <form class="d-flex me-3" asp-controller="Invoices" asp-action="Index" method="get">
                        <div class="input-group input-group-sm">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Search invoices..."
                                style="min-width: 200px;">
                            <button class="btn btn-light" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                    }

                    @if (showQuickAdd)
                    {
                    <!-- Quick Actions -->
                    <div class="dropdown me-3">
                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-plus-lg"></i> Quick Add
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Invoices" asp-action="Create"><i
                                        class="bi bi-file-earmark-plus text-primary"></i> New Invoice</a></li>
                            <li><a class="dropdown-item" asp-controller="Payments" asp-action="Create"><i
                                        class="bi bi-credit-card text-success"></i> New Payment</a></li>
                            <li><a class="dropdown-item" asp-controller="Requisitions" asp-action="Create"><i
                                        class="bi bi-file-earmark-check text-info"></i> New Requisition</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" asp-controller="AiImport" asp-action="Invoice"><i
                                        class="bi bi-robot text-purple"></i> AI Import Invoice</a></li>
                            <li><a class="dropdown-item" asp-controller="AiImport" asp-action="Payment"><i
                                        class="bi bi-robot text-purple"></i> AI Import Payment</a></li>
                            <li><a class="dropdown-item" asp-controller="AiImport" asp-action="MultiPagePdf"><i
                                        class="bi bi-file-earmark-pdf text-warning"></i> Multi-Page PDF</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" asp-controller="AiImport" asp-action="Documents"><i
                                        class="bi bi-folder2-open text-secondary"></i> Document Library</a></li>
                        </ul>
                    </div>
                    }

                    <!-- User Menu -->
                    <div class="dropdown">
                        <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button"
                            data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> @Context.Session.GetString("FullName")
                            <span class="badge bg-light text-primary ms-1">@userRole</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (isAdmin)
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i
                                            class="bi bi-speedometer2"></i> Admin Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Settings"><i
                                            class="bi bi-gear"></i> Settings</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                            }
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i
                                        class="bi bi-box-arrow-right"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="ms-auto">
                    <a class="btn btn-light btn-sm" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>
            }
        </div>
    </nav>

    @if (isAdmin && ViewData["MaintenanceModeActive"] is true)
    {
        <div class="alert alert-warning alert-dismissible mb-0 rounded-0 d-flex align-items-center justify-content-between py-2 px-3 border-0" style="background: linear-gradient(90deg, #ff9a56 0%, #ff6a00 100%); color: #fff; font-weight: 500; z-index: 1040;">
            <div>
                <i class="bi bi-cone-striped me-2"></i>
                <strong>MAINTENANCE MODE ACTIVE</strong> â€” Non-admin users are being redirected to the maintenance page.
            </div>
            <a asp-controller="Admin" asp-action="Settings" class="btn btn-sm btn-light fw-semibold">
                <i class="bi bi-gear-fill"></i> Manage Settings
            </a>
        </div>
    }

    @if (!string.IsNullOrEmpty(announcementText))
    {
        <div class="alert alert-@announcementType alert-dismissible mb-0 rounded-0 py-2 px-3 text-center border-0" role="alert" style="z-index: 1039;">
            <i class="bi bi-megaphone me-1"></i> @announcementText
            <button type="button" class="btn-close btn-close-sm" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (isLoggedIn)
    {
        <!-- Mobile sidebar toggle -->
        <button class="btn btn-primary d-md-none position-fixed" type="button" data-bs-toggle="collapse"
            data-bs-target="#sidebarMenu"
            style="bottom: 20px; right: 20px; z-index: 1050; border-radius: 50%; width: 50px; height: 50px;">
            <i class="bi bi-list"></i>
        </button>
    }

    <div class="container-fluid">
        <div class="row">
            @if (isLoggedIn)
            {
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                    <div class="sidebar-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Invoices" asp-action="Index">
                                    <i class="bi bi-file-earmark-text"></i>
                                    Invoices
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Payments" asp-action="Index">
                                    <i class="bi bi-credit-card"></i>
                                    Payments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="BatchPayments" asp-action="Index">
                                    <i class="bi bi-layers"></i>
                                    Batch Payments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-graph-up"></i>
                                    Reports
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Invoices" asp-action="Overdue">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Overdue Invoices
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Invoices" asp-action="OverAllocated">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    Over-Allocated
                                </a>
                            </li>
                        </ul>

                        <h6
                            class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>AI Import (Smart)</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AiImport" asp-action="Invoice">
                                    <i class="bi bi-robot"></i>
                                    AI Import Invoices
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AiImport" asp-action="Payment">
                                    <i class="bi bi-robot"></i>
                                    AI Import Payments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AiImport" asp-action="MultiPagePdf">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                    Multi-Page PDF
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AiImport" asp-action="SmartSplit">
                                    <i class="bi bi-scissors"></i>
                                    Smart PDF Splitter
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AiImport" asp-action="Documents">
                                    <i class="bi bi-folder2-open"></i>
                                    Document Library
                                </a>
                            </li>
                        </ul>

                        <h6
                            class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Manual Import</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Invoices" asp-action="Import">
                                    <i class="bi bi-upload"></i>
                                    CSV/Excel Invoices
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Payments" asp-action="Import">
                                    <i class="bi bi-upload"></i>
                                    CSV/Excel Payments
                                </a>
                            </li>
                        </ul>

                        <h6
                            class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Procurement</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Requisitions" asp-action="Index">
                                    <i class="bi bi-file-earmark-check"></i>
                                    Requisitions
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Requisitions" asp-action="PendingApprovals">
                                    <i class="bi bi-hourglass-split"></i>
                                    Pending Approvals
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PurchaseOrders" asp-action="Index">
                                    <i class="bi bi-cart-check"></i>
                                    Purchase Orders
                                </a>
                            </li>
                        </ul>

                        @if (isAdmin)
                        {
                            <h6
                                class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                                <span>Administration</span>
                            </h6>
                            <ul class="nav flex-column mb-2">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i>
                                        Admin Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                        <i class="bi bi-people"></i>
                                        User Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Suppliers">
                                        <i class="bi bi-building"></i>
                                        Supplier Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Customers">
                                        <i class="bi bi-person-lines-fill"></i>
                                        Customer Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="AuditLogs">
                                        <i class="bi bi-clock-history"></i>
                                        Audit Logs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Settings">
                                        <i class="bi bi-gear"></i>
                                        System Settings
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Appearance">
                                        <i class="bi bi-palette2"></i>
                                        Appearance
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </nav>
            }

            <main role="main" class="@(isLoggedIn ? "col-md-9 ms-sm-auto col-lg-10 px-md-4" : "col-12 px-md-4")">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    @if (showFooter && isLoggedIn)
    {
        <footer class="border-top py-3 mt-4" style="margin-left: 240px; background: #f8f9fa;">
            <div class="container-fluid px-4">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div class="d-flex align-items-center gap-3">
                        <small class="text-muted">@footerText</small>
                        @{
                            try {
                                if (!string.IsNullOrEmpty(footerLeftLinks) && footerLeftLinks.StartsWith("[")) {
                                    var links = System.Text.Json.JsonSerializer.Deserialize<List<Dictionary<string, string>>>(footerLeftLinks);
                                    if (links != null) {
                                        foreach (var link in links) {
                                            <a href="@link.GetValueOrDefault("url", "#")" class="text-muted text-decoration-none ms-2"><small>@link.GetValueOrDefault("text", "")</small></a>
                                        }
                                    }
                                }
                            } catch { }
                        }
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        @{
                            try {
                                if (!string.IsNullOrEmpty(footerRightLinks) && footerRightLinks.StartsWith("[")) {
                                    var rlinks = System.Text.Json.JsonSerializer.Deserialize<List<Dictionary<string, string>>>(footerRightLinks);
                                    if (rlinks != null) {
                                        foreach (var link in rlinks) {
                                            <a href="@link.GetValueOrDefault("url", "#")" class="text-muted text-decoration-none"><small>@link.GetValueOrDefault("text", "")</small></a>
                                        }
                                    }
                                }
                            } catch { }
                        }
                        @if (footerShowVersion)
                        {
                            <small class="text-muted"><i class="bi bi-code-slash me-1"></i>v2.5.0</small>
                        }
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/js/progress-modal.js"></script>
    <script src="~/js/date-picker.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>