@{
    ViewData["Title"] = "AI Import - Invoices";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-robot"></i> AI-Powered Invoice Import</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-controller="Invoices" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Invoices
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @Html.Raw(TempData["ErrorMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="m-0"><i class="bi bi-cloud-upload"></i> Upload Invoice Files</h5>
            </div>
            <div class="card-body">
                <form id="invoiceImportForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="alert alert-info">
                        <h6><i class="bi bi-lightbulb"></i> How it works:</h6>
                        <ol class="mb-0">
                            <li>Upload PDF or image files of invoices</li>
                            <li>AI extracts invoice details automatically</li>
                            <li>Review extracted data before saving</li>
                            <li>Save to database with one click</li>
                        </ol>
                    </div>

                    <!-- Import Mode Selection -->
                    <div class="card mb-4 border-primary">
                        <div class="card-header bg-primary bg-opacity-10">
                            <h6 class="mb-0"><i class="bi bi-collection me-2"></i>Import Mode</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-check card p-3 h-100 border-2" id="singleModeCard"
                                        style="border-color: #0d6efd !important;">
                                        <input class="form-check-input" type="radio" name="importMode" id="singleMode"
                                            value="single" checked>
                                        <label class="form-check-label w-100" for="singleMode">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-file-earmark-text text-primary fs-2 me-3"></i>
                                                <div>
                                                    <strong>Single Invoice</strong>
                                                    <p class="mb-0 small text-muted">One invoice per file</p>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check card p-3 h-100 border-2" id="bulkModeCard">
                                        <input class="form-check-input" type="radio" name="importMode" id="bulkMode"
                                            value="bulk">
                                        <label class="form-check-label w-100" for="bulkMode">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-files text-success fs-2 me-3"></i>
                                                <div>
                                                    <strong>Bulk Import</strong>
                                                    <span class="badge bg-success ms-1">500+</span>
                                                    <p class="mb-0 small text-muted">Multiple invoices in 1 PDF</p>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-success mt-3 mb-0 d-none" id="bulkModeInfo">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Bulk Mode:</strong> Upload a single PDF containing multiple invoices.
                                The AI will automatically detect and extract up to 500+ invoices from the document.
                            </div>
                        </div>
                    </div>

                    <!-- File Upload Area -->
                    <div class="mb-4">
                        <label for="file" class="form-label fw-bold d-flex align-items-center">
                            Select Invoice File(s)
                            <span class="badge bg-primary ms-2"><i class="bi bi-files me-1"></i>Multi-File</span>
                        </label>
                        <div class="upload-area border border-2 border-dashed rounded p-4 text-center" id="uploadArea"
                            style="border-color: #0d6efd !important; cursor: pointer;">
                            <div class="d-flex justify-content-center align-items-center mb-2">
                                <i class="bi bi-file-earmark-pdf text-danger fs-2 me-1" style="opacity: 0.7;"></i>
                                <i class="bi bi-cloud-arrow-up display-4 text-primary mx-2"></i>
                                <i class="bi bi-file-earmark-image text-success fs-2 ms-1" style="opacity: 0.7;"></i>
                            </div>
                            <p class="mt-2 mb-1">
                                <strong>Click to select</strong> or drag and drop
                            </p>
                            <p class="text-muted small mb-2">PDF, JPG, PNG, GIF, WebP (max 500MB per file)</p>
                            <div
                                class="d-inline-flex align-items-center bg-primary bg-opacity-10 rounded-pill px-3 py-1">
                                <i class="bi bi-plus-circle-fill text-primary me-2"></i>
                                <span class="text-primary fw-medium small">Select multiple files at once
                                    (Ctrl+Click)</span>
                            </div>
                        </div>
                        <input type="file" class="form-control d-none" id="file" name="files"
                            accept=".pdf,.jpg,.jpeg,.png,.gif,.webp" multiple required />
                        <div id="fileInfo" class="mt-2 d-none">
                            <div id="fileList">
                                <!-- File items will be added here dynamically -->
                            </div>
                            <div class="d-flex gap-2 mt-2">
                                <button type="button" class="btn btn-outline-primary" id="addMoreFiles">
                                    <i class="bi bi-plus-circle me-1"></i> Add More Files
                                </button>
                                <button type="button" class="btn btn-outline-secondary" id="clearAllFiles">
                                    <i class="bi bi-x-circle me-1"></i> Clear All
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Analysis Options -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="bi bi-gear me-2"></i>Analysis Options</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-2">
                                <input type="checkbox" class="form-check-input" id="deepAnalysis" name="deepAnalysis"
                                    checked />
                                <label class="form-check-label" for="deepAnalysis">
                                    <strong>Deep Document Analysis</strong>
                                    <br /><small class="text-muted">Extract all text, tables, and structured
                                        data</small>
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input type="checkbox" class="form-check-input" id="autoMatchEntities"
                                    name="autoMatchEntities" checked />
                                <label class="form-check-label" for="autoMatchEntities">
                                    <strong>Auto-Match Customers/Suppliers</strong>
                                    <br /><small class="text-muted">Match to existing entities by name</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="extractLineItems"
                                    name="extractLineItems" checked />
                                <label class="form-check-label" for="extractLineItems">
                                    <strong>Extract Line Items</strong>
                                    <br /><small class="text-muted">Identify individual invoice items with quantities
                                        and prices</small>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" id="processBtn">
                            <i class="bi bi-cpu me-2"></i>Start AI Analysis
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-3">
            <div class="card-header bg-success text-white">
                <h6 class="m-0"><i class="bi bi-check-circle"></i> What Gets Extracted</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Invoice Number</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Invoice Date</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Due Date</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Customer/Supplier Name
                    </li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Contact Details</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Line Items</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Quantities & Prices</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Total Amount</li>
                </ul>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h6 class="m-0"><i class="bi bi-exclamation-triangle"></i> Important Notes</h6>
            </div>
            <div class="card-body">
                <p class="small mb-2"><strong>AI Accuracy:</strong> The AI will do its best to extract data accurately,
                    but please review all extracted information before saving.</p>
                <p class="small mb-2"><strong>API Key Required:</strong> Make sure you've configured your OpenAI API
                    key in appsettings.json</p>
                <p class="small mb-0"><strong>Clear Images:</strong> Better quality images/PDFs produce better results
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h6 class="m-0"><i class="bi bi-question-circle"></i> How to Get OpenAI API Key</h6>
            </div>
            <div class="card-body">
                <ol>
                    <li>Go to <a href="https://platform.openai.com/api-keys" target="_blank">OpenAI Platform</a>
                    </li>
                    <li>Click "Create new secret key"</li>
                    <li>Copy your API key</li>
                    <li>Add it to <code>appsettings.json</code> under <code>OpenAI:ApiKey</code></li>
                    <li>Restart the application</li>
                </ol>
                <p class="mb-0 text-muted small">OpenAI offers pay-as-you-go pricing for API usage.</p>
            </div>
        </div>
    </div>
</div>

<!-- Progress Modal with Circular Progress -->
<div class="modal fade" id="progressModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-cpu me-2"></i>AI Processing Invoice
                </h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Circular Progress -->
                    <div class="col-md-5 text-center">
                        <div class="progress-circle-container mb-3">
                            <svg class="progress-circle" viewBox="0 0 120 120">
                                <circle class="progress-circle-bg" cx="60" cy="60" r="54" />
                                <circle class="progress-circle-fill" cx="60" cy="60" r="54" id="progressCircle" />
                            </svg>
                            <div class="progress-circle-text">
                                <span class="progress-percent" id="progressPercent">0%</span>
                                <span class="progress-label">Processing</span>
                            </div>
                        </div>

                        <!-- Current Activity -->
                        <div class="current-activity mt-3">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="spinner-border spinner-border-sm text-primary me-2" id="activitySpinner">
                                </div>
                                <span id="currentActivity" class="text-muted fw-medium">Initializing...</span>
                            </div>
                        </div>
                    </div>

                    <!-- Activity Log -->
                    <div class="col-md-7">
                        <div class="card h-100">
                            <div class="card-header py-2 bg-light">
                                <small class="fw-bold"><i class="bi bi-list-check me-1"></i>AI Import Activity
                                    Log</small>
                            </div>
                            <div class="card-body p-0" style="max-height: 280px; overflow-y: auto;" id="activityLog">
                                <div class="list-group list-group-flush" id="activityList">
                                    <!-- Activities will be added here -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-none" id="progressFooter">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Processing Error</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="errorMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="location.reload()">Try Again</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('invoiceImportForm');
            const fileInput = document.getElementById('file');
            const uploadArea = document.getElementById('uploadArea');
            const fileInfo = document.getElementById('fileInfo');
            const fileList = document.getElementById('fileList');
            const addMoreFiles = document.getElementById('addMoreFiles');
            const processBtn = document.getElementById('processBtn');

            // Import mode elements
            const singleMode = document.getElementById('singleMode');
            const bulkMode = document.getElementById('bulkMode');
            const singleModeCard = document.getElementById('singleModeCard');
            const bulkModeCard = document.getElementById('bulkModeCard');
            const bulkModeInfo = document.getElementById('bulkModeInfo');

            const progressModal = new bootstrap.Modal(document.getElementById('progressModal'));
            const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));

            // Track selected files
            let selectedFiles = [];

            // Import mode change handlers
            singleMode.addEventListener('change', function () {
                if (this.checked) {
                    singleModeCard.style.borderColor = '#0d6efd';
                    bulkModeCard.style.borderColor = '#dee2e6';
                    bulkModeInfo.classList.add('d-none');
                    updateProcessButton();
                }
            });

            bulkMode.addEventListener('change', function () {
                if (this.checked) {
                    bulkModeCard.style.borderColor = '#198754';
                    singleModeCard.style.borderColor = '#dee2e6';
                    bulkModeInfo.classList.remove('d-none');
                    processBtn.innerHTML = '<i class="bi bi-files me-2"></i>Start Bulk Extraction (500+)';
                }
            });

            function updateProcessButton() {
                if (bulkMode.checked) {
                    processBtn.innerHTML = '<i class="bi bi-files me-2"></i>Start Bulk Extraction (500+)';
                } else if (selectedFiles.length > 1) {
                    processBtn.innerHTML = `<i class="bi bi-cpu me-2"></i>Process ${selectedFiles.length} Files`;
                } else {
                    processBtn.innerHTML = '<i class="bi bi-cpu me-2"></i>Start AI Analysis';
                }
            }

            // File upload area click
            uploadArea.addEventListener('click', () => fileInput.click());

            // Add more files button
            addMoreFiles.addEventListener('click', () => fileInput.click());

            // Clear all files button
            document.getElementById('clearAllFiles').addEventListener('click', () => {
                selectedFiles = [];
                renderFileList();
                updateProcessButton();
            });

            // Drag and drop
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('bg-light');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('bg-light');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('bg-light');
                if (e.dataTransfer.files.length) {
                    addFiles(e.dataTransfer.files);
                }
            });

            // File input change
            fileInput.addEventListener('change', function () {
                if (this.files.length) {
                    addFiles(this.files);
                }
            });

            function addFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    // Check for duplicates
                    const isDuplicate = selectedFiles.some(f =>
                        f.name === files[i].name && f.size === files[i].size
                    );
                    if (!isDuplicate) {
                        selectedFiles.push(files[i]);
                    }
                }
                renderFileList();
                updateProcessButton();
            }

            function removeFileAt(index) {
                selectedFiles.splice(index, 1);
                renderFileList();
                updateProcessButton();
            }

            function renderFileList() {
                if (selectedFiles.length === 0) {
                    fileInfo.classList.add('d-none');
                    uploadArea.classList.remove('d-none');
                    return;
                }

                fileInfo.classList.remove('d-none');
                uploadArea.classList.add('d-none');

                let html = '';
                selectedFiles.forEach((file, index) => {
                    const icon = file.name.toLowerCase().endsWith('.pdf') ? 'file-earmark-pdf' : 'file-earmark-image';
                    const iconColor = file.name.toLowerCase().endsWith('.pdf') ? 'text-danger' : 'text-primary';
                    html += `
                                <div class="d-flex align-items-center p-2 bg-light rounded mb-2">
                                    <i class="bi bi-${icon} ${iconColor} fs-4 me-2"></i>
                                    <div class="flex-grow-1">
                                        <strong>${escapeHtml(file.name)}</strong>
                                        <small class="text-muted d-block">${formatFileSize(file.size)}</small>
                                    </div>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="window.removeFileAt(${index})">
                                        <i class="bi bi-x"></i>
                                    </button>
                                </div>
                            `;
                });

                if (selectedFiles.length > 1) {
                    html = `<div class="mb-2 text-muted small"><i class="bi bi-info-circle"></i> ${selectedFiles.length} files selected</div>` + html;
                }

                fileList.innerHTML = html;
            }

            // Make removeFileAt available globally for onclick
            window.removeFileAt = removeFileAt;

            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            function formatFileSize(bytes) {
                if (bytes < 1024) return bytes + ' bytes';
                if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
                return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
            }

            // Form submission with progress
            form.addEventListener('submit', async function (e) {
                e.preventDefault();

                if (selectedFiles.length === 0) {
                    alert('Please select at least one file to upload.');
                    return;
                }

                const isBulkMode = bulkMode.checked;
                const isMultiFile = selectedFiles.length > 1 && !isBulkMode;

                // Show progress modal
                progressModal.show();
                resetProgress();

                if (isMultiFile) {
                    // Process multiple files sequentially
                    await processMultipleFiles();
                } else {
                    // Process single file or bulk mode
                    const formData = new FormData();
                    formData.append('file', selectedFiles[0]);
                    formData.append('deepAnalysis', document.getElementById('deepAnalysis').checked);
                    formData.append('autoMatchEntities', document.getElementById('autoMatchEntities').checked);
                    formData.append('extractLineItems', document.getElementById('extractLineItems').checked);

                    const endpoint = isBulkMode ? '/AiImport/ProcessBulkInvoicesAjax' : '/AiImport/ProcessInvoiceAjax';
                    await processSingleFile(formData, endpoint, isBulkMode);
                }
            });

            async function processMultipleFiles() {
                const totalFiles = selectedFiles.length;
                let processedCount = 0;
                let successCount = 0;
                let errors = [];
                let documentIds = [];

                for (let i = 0; i < totalFiles; i++) {
                    const file = selectedFiles[i];
                    const fileProgress = Math.round(((i) / totalFiles) * 90);

                    updateProgress(
                        fileProgress,
                        `Processing file ${i + 1} of ${totalFiles}: ${file.name}`,
                        'processing',
                        'file-earmark-text'
                    );

                    try {
                        const formData = new FormData();
                        formData.append('file', file);
                        formData.append('deepAnalysis', document.getElementById('deepAnalysis').checked);
                        formData.append('autoMatchEntities', document.getElementById('autoMatchEntities').checked);
                        formData.append('extractLineItems', document.getElementById('extractLineItems').checked);

                        const response = await fetch('/AiImport/ProcessInvoiceAjax', {
                            method: 'POST',
                            body: formData
                        });

                        const responseText = await response.text();

                        if (response.ok) {
                            const result = JSON.parse(responseText);
                            if (result.success) {
                                successCount++;
                                if (result.documentId) {
                                    documentIds.push(result.documentId);
                                }
                                addActivity(`✓ ${file.name} - extracted successfully`, 'success', 'check-circle');
                            } else {
                                errors.push({ file: file.name, error: result.message });
                                addActivity(`✗ ${file.name} - ${result.message}`, 'error', 'x-circle');
                            }
                        } else {
                            errors.push({ file: file.name, error: 'Server error' });
                            addActivity(`✗ ${file.name} - server error`, 'error', 'x-circle');
                        }
                    } catch (error) {
                        errors.push({ file: file.name, error: error.message });
                        addActivity(`✗ ${file.name} - ${error.message}`, 'error', 'x-circle');
                    }

                    processedCount++;
                }

                // Complete
                updateProgress(100, `Completed: ${successCount} of ${totalFiles} files processed successfully`, 'complete', 'trophy');

                if (successCount > 0) {
                    setTimeout(() => {
                        progressModal.hide();
                        if (documentIds.length === 1) {
                            // Single successful file - redirect to edit
                            window.location.href = `/AiImport/EditInvoice?documentId=${documentIds[0]}`;
                        } else {
                            // Multiple files - redirect to document library
                            window.location.href = '/AiImport/Documents?status=Extracted';
                        }
                    }, 2000);
                } else {
                    // All failed
                    document.getElementById('progressFooter').classList.remove('d-none');
                }
            }

            async function processSingleFile(formData, endpoint, isBulkMode) {
                // Different progress stages for bulk vs single mode
                const singleStages = [
                    { percent: 5, activity: 'Uploading document...', status: 'upload', icon: 'cloud-arrow-up' },
                    { percent: 10, activity: 'Document uploaded successfully', status: 'success', icon: 'check-circle' },
                    { percent: 15, activity: 'Initializing AI analysis engine...', status: 'processing', icon: 'cpu' },
                    { percent: 20, activity: 'Analyzing document structure...', status: 'processing', icon: 'file-earmark-text' },
                    { percent: 30, activity: 'Performing OCR text extraction...', status: 'processing', icon: 'body-text' },
                    { percent: 40, activity: 'Identifying invoice number...', status: 'processing', icon: 'hash' },
                    { percent: 48, activity: 'Extracting invoice dates...', status: 'processing', icon: 'calendar-date' },
                    { percent: 55, activity: 'Detecting customer/supplier information...', status: 'processing', icon: 'person-badge' },
                    { percent: 65, activity: 'Extracting line items and descriptions...', status: 'processing', icon: 'list-ul' },
                    { percent: 72, activity: 'Parsing quantities and unit prices...', status: 'processing', icon: 'calculator' },
                    { percent: 80, activity: 'Calculating totals and tax amounts...', status: 'processing', icon: 'currency-dollar' },
                    { percent: 85, activity: 'Matching with existing customers/suppliers...', status: 'matching', icon: 'diagram-3' },
                    { percent: 92, activity: 'Validating extracted data...', status: 'validating', icon: 'shield-check' },
                    { percent: 97, activity: 'Preparing review page...', status: 'finalizing', icon: 'check2-all' }
                ];

                const bulkStages = [
                    { percent: 2, activity: 'Uploading document...', status: 'upload', icon: 'cloud-arrow-up' },
                    { percent: 5, activity: 'Document uploaded successfully', status: 'success', icon: 'check-circle' },
                    { percent: 8, activity: 'Initializing bulk extraction engine...', status: 'processing', icon: 'cpu' },
                    { percent: 12, activity: 'Analyzing document structure...', status: 'processing', icon: 'file-earmark-text' }
                ];

                const stages = isBulkMode ? bulkStages : singleStages;
                let stageIndex = 0;

                // Progress simulation for initial stages
                const progressInterval = setInterval(() => {
                    if (stageIndex < stages.length) {
                        updateProgress(
                            stages[stageIndex].percent,
                            stages[stageIndex].activity,
                            stages[stageIndex].status,
                            stages[stageIndex].icon
                        );
                        stageIndex++;
                    }
                }, isBulkMode ? 400 : 600);

                try {
                    const response = await fetch(endpoint, {
                        method: 'POST',
                        body: formData
                    });

                    clearInterval(progressInterval);

                    const responseText = await response.text();

                    if (response.ok) {
                        let result;
                        try {
                            result = JSON.parse(responseText);
                        } catch (parseError) {
                            throw new Error('Invalid response from server. Please try again.');
                        }

                        if (result.success) {
                            if (isBulkMode && result.totalExtracted) {
                                updateProgress(100, `Bulk extraction complete! ${result.totalExtracted} invoices extracted.`, 'complete', 'trophy');
                                addActivity(`Successfully extracted ${result.totalExtracted} invoices`, 'success', 'clipboard-check');
                                if (result.warnings && result.warnings.length > 0) {
                                    result.warnings.forEach(w => addActivity(w, 'warning', 'exclamation-triangle'));
                                }
                            } else {
                                updateProgress(100, 'Analysis complete! All data extracted successfully.', 'complete', 'trophy');
                                addActivity('Invoice data ready for review', 'success', 'clipboard-check');
                            }

                            setTimeout(() => {
                                progressModal.hide();
                                window.location.href = result.redirectUrl;
                            }, isBulkMode ? 2000 : 1200);
                        } else {
                            progressModal.hide();
                            document.getElementById('errorMessage').textContent = result.message || 'Failed to process document.';
                            errorModal.show();
                        }
                    } else {
                        let errorMessage = 'Server error: ' + response.status;
                        try {
                            const errorResult = JSON.parse(responseText);
                            if (errorResult.message) {
                                errorMessage = errorResult.message;
                            }
                        } catch (e) {
                            if (responseText.includes('DOCTYPE') || responseText.includes('<html')) {
                                errorMessage = 'Server returned an error page. Please try again or contact support.';
                            }
                        }
                        throw new Error(errorMessage);
                    }
                } catch (error) {
                    clearInterval(progressInterval);
                    progressModal.hide();
                    document.getElementById('errorMessage').textContent = error.message || 'An error occurred while processing the document.';
                    errorModal.show();
                }
            }

            function resetProgress() {
                setCircleProgress(0);
                document.getElementById('progressPercent').textContent = '0%';
                document.getElementById('currentActivity').textContent = 'Initializing...';
                document.getElementById('activityList').innerHTML = '';
                document.getElementById('progressFooter').classList.add('d-none');
                document.getElementById('activitySpinner').classList.remove('d-none');
            }

            function setCircleProgress(percent) {
                const circle = document.getElementById('progressCircle');
                const circumference = 2 * Math.PI * 54; // r = 54
                const offset = circumference - (percent / 100) * circumference;
                circle.style.strokeDasharray = circumference;
                circle.style.strokeDashoffset = offset;
            }

            function updateProgress(percent, activity, status, icon = 'arrow-right') {
                setCircleProgress(percent);
                document.getElementById('progressPercent').textContent = percent + '%';
                document.getElementById('currentActivity').textContent = activity;
                addActivity(activity, status, icon);

                if (percent >= 100) {
                    document.getElementById('activitySpinner').classList.add('d-none');
                }
            }

            function addActivity(text, status = 'processing', icon = 'arrow-right') {
                const list = document.getElementById('activityList');
                const item = document.createElement('div');

                let statusClass = 'text-primary';
                let bgClass = '';

                if (status === 'success' || status === 'complete') {
                    statusClass = 'text-success';
                    bgClass = 'list-group-item-success';
                } else if (status === 'error') {
                    statusClass = 'text-danger';
                    bgClass = 'list-group-item-danger';
                } else if (status === 'matching') {
                    statusClass = 'text-info';
                } else if (status === 'validating') {
                    statusClass = 'text-warning';
                }

                const timestamp = new Date().toLocaleTimeString();

                item.className = `list-group-item py-2 ${bgClass}`;
                item.innerHTML = `
                                            <div class="d-flex align-items-start">
                                                <i class="bi bi-${icon} ${statusClass} me-2 mt-1"></i>
                                                <div class="flex-grow-1">
                                                    <div class="small">${text}</div>
                                                    <small class="text-muted">${timestamp}</small>
                                                </div>
                                                ${status === 'success' || status === 'complete' ? '<i class="bi bi-check-circle-fill text-success"></i>' : ''}
                                            </div>
                                        `;

                list.appendChild(item);
                document.getElementById('activityLog').scrollTop = document.getElementById('activityLog').scrollHeight;
            }
        });
    </script>
}

