@model InvoiceManagement.Models.ImportedDocument
@{
    ViewData["Title"] = "View Document";
    var isPdf = Model.ContentType?.Contains("pdf") == true;
    var isImage = Model.ContentType?.Contains("image") == true;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" id="documentTitle">
                <i
                class="bi @(isPdf ? "bi-file-pdf text-danger" : isImage ? "bi-file-image text-primary" : "bi-file-earmark") me-2"></i>
                <span id="fileNameDisplay">@Model.OriginalFileName</span>
                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" id="editNameBtn"
                        title="Edit file name">
                    <i class="bi bi-pencil"></i>
                </button>
            </h2>
            <!-- Inline edit form (hidden by default) -->
            <div id="editNameForm" class="d-none mb-2">
                <div class="input-group" style="max-width: 500px;">
                    <input type="text" class="form-control" id="fileNameInput" value="@Model.OriginalFileName" />
                    <button type="button" class="btn btn-success" id="saveNameBtn" title="Save">
                        <i class="bi bi-check-lg"></i>
                    </button>
                    <button type="button" class="btn btn-secondary" id="cancelNameBtn" title="Cancel">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            </div>
            <p class="text-muted mb-0">
                Uploaded: @Model.UploadDate.ToString("dd/MM/yyyy HH:mm") |
                Size: @(Model.FileSize > 0 ? $"{Model.FileSize / 1024.0:N1} KB" : "-") |
                Type: @Model.DocumentType
            </p>
        </div>
        <div class="btn-group">
            <a asp-action="DownloadDocument" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-download me-1"></i>Download
            </a>
            @if (Model.InvoiceId.HasValue)
            {
                <a asp-controller="Invoices" asp-action="Details" asp-route-id="@Model.InvoiceId"
                       class="btn btn-outline-secondary">
                    <i class="bi bi-receipt me-1"></i>View Invoice
                </a>
            }
            @if (Model.PaymentId.HasValue)
            {
                <a asp-controller="Payments" asp-action="Details" asp-route-id="@Model.PaymentId"
                       class="btn btn-outline-secondary">
                    <i class="bi bi-credit-card me-1"></i>View Payment
                </a>
            }
            <a asp-action="Documents" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to Documents
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Document Preview</h5>
                </div>
                <div class="card-body p-0">
                    @if (isPdf)
                    {
                        <div class="ratio" style="--bs-aspect-ratio: 141.4%;">
                            <iframe src="@Url.Action("PreviewDocument", new { id = Model.Id })" class="border-0"
                                    style="width: 100%; min-height: 800px;">
                            </iframe>
                        </div>
                    }
                    else if (isImage)
                    {
                        <div class="text-center p-4 bg-secondary bg-opacity-10">
                            <img src="@Url.Action("PreviewDocument", new { id = Model.Id })" alt="@Model.OriginalFileName"
                                 class="img-fluid shadow-lg" style="max-height: 800px; object-fit: contain;">
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">Preview not available</h4>
                            <p class="text-muted">This file type cannot be previewed in the browser.</p>
                            <a asp-action="DownloadDocument" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                                <i class="bi bi-download me-2"></i>Download File
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="card shadow mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Document Details</h6>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt>File Name <button type="button" class="btn btn-sm btn-link p-0 ms-1" id="editNameBtn2"
                                                  title="Edit file name"><i class="bi bi-pencil"></i></button></dt>
                            <dd class="text-break" id="fileNameDisplaySidebar">@Model.OriginalFileName</dd>

                            <dt>Content Type</dt>
                            <dd>@(Model.ContentType ?? "Unknown")</dd>

                            <dt>File Size</dt>
                            <dd>@(Model.FileSize > 0 ? $"{Model.FileSize / 1024.0:N1} KB" : "-")</dd>

                            <dt>Document Type</dt>
                            <dd><span class="badge bg-info">@Model.DocumentType</span></dd>

                            <dt>Status</dt>
                            <dd>
                                <span
                                    class="badge @(Model.ProcessingStatus == "Processed" ? "bg-success" : Model.ProcessingStatus == "Error" ? "bg-danger" : "bg-warning")">
                                    @Model.ProcessingStatus
                                </span>
                            </dd>

                            <dt>Upload Date</dt>
                            <dd>@Model.UploadDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (Model.ProcessedDate.HasValue)
                            {
                                <dt>Processed Date</dt>
                                <dd>@Model.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.UploadedBy))
                            {
                                <dt>Uploaded By</dt>
                                <dd>@Model.UploadedBy</dd>
                            }
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ExtractedSupplierName) ||
                                                                                        !string.IsNullOrEmpty(Model.ExtractedCustomerName) || !string.IsNullOrEmpty(Model.ExtractedBankName))
                {
                    <div class="card shadow mb-3">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="bi bi-cpu me-2"></i>Extracted Data</h6>
                        </div>
                        <div class="card-body">
                            <dl class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.ExtractedSupplierName))
                                {
                                    <dt>Supplier Name</dt>
                                    <dd>@Model.ExtractedSupplierName</dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.ExtractedCustomerName))
                                {
                                    <dt>Customer Name</dt>
                                    <dd>@Model.ExtractedCustomerName</dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.ExtractedBankName))
                                {
                                    <dt>Bank Name</dt>
                                    <dd>@Model.ExtractedBankName</dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.ExtractedAccountNumber))
                                {
                                    <dt>Account Number</dt>
                                    <dd>@Model.ExtractedAccountNumber</dd>
                                }
                            </dl>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ProcessingNotes))
                {
                    <div class="card shadow">
                        <div class="card-header bg-warning">
                            <h6 class="mb-0"><i class="bi bi-sticky me-2"></i>Processing Notes</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 small">@Model.ProcessingNotes</p>
                        </div>
                    </div>
                }

                <div class="card shadow mt-3">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="bi bi-link-45deg me-2"></i>Linked Records</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.InvoiceId.HasValue)
                        {
                            <a asp-controller="Invoices" asp-action="Details" asp-route-id="@Model.InvoiceId"
                                   class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-receipt me-2"></i>View Linked Invoice
                            </a>
                        }
                        @if (Model.PaymentId.HasValue)
                        {
                            <a asp-controller="Payments" asp-action="Details" asp-route-id="@Model.PaymentId"
                                   class="btn btn-outline-success w-100 mb-2">
                                <i class="bi bi-credit-card me-2"></i>View Linked Payment
                            </a>
                        }
                        @if (!Model.InvoiceId.HasValue && !Model.PaymentId.HasValue)
                        {
                            <p class="text-muted mb-0 text-center">
                                <i class="bi bi-unlink me-1"></i>Not linked to any record
                            </p>
                        }
                    </div>
                </div>

                <!-- AI Analysis Section -->
                <div class="card shadow mt-3">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="bi bi-robot me-2"></i>AI Analysis</h6>
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-warning w-100 mb-2" id="analyzeBtn">
                            <i class="bi bi-cpu me-1"></i>Run AI Analysis
                        </button>
                        <p class="small text-muted mb-2">
                            AI will extract invoice details and rename the file to InvNo_[number] format.
                        </p>

                        <hr class="my-2" />

                        @if (isPdf)
                        {
                            <button type="button" class="btn btn-outline-warning w-100 mb-2" id="multiPageBtn">
                                <i class="bi bi-files me-1"></i>Run Multi-Page PDF Analysis
                            </button>
                            <p class="small text-muted mb-2">
                                Detect and extract <strong>multiple invoices</strong> from this PDF using AI page-boundary
                                detection.
                            </p>
                            <button type="button" class="btn btn-outline-info w-100 mb-2" id="smartSplitBtn"
                                    onclick="smartSplitDocument(@Model.Id)">
                                <i class="bi bi-scissors me-1"></i>Smart Split PDF
                            </button>
                            <p class="small text-muted mb-0">
                                Physically split this PDF into <strong>individual invoice files</strong> and match with
                                extracted records.
                            </p>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-warning w-100 mb-2 disabled" disabled
                                    title="Multi-Page PDF Analysis is only available for PDF documents">
                                <i class="bi bi-files me-1"></i>Multi-Page PDF Analysis
                                <span class="badge bg-secondary ms-1">PDF only</span>
                            </button>
                            <button type="button" class="btn btn-outline-info w-100 mb-2 disabled" disabled
                                    title="Smart Split is only available for PDF documents">
                                <i class="bi bi-scissors me-1"></i>Smart Split PDF
                                <span class="badge bg-secondary ms-1">PDF only</span>
                            </button>
                            <p class="small text-muted mb-0">
                                <i class="bi bi-info-circle me-1"></i>Multi-Page &amp; Smart Split features require a PDF
                                document.
                                You can use the dedicated pages to upload and process PDFs directly.
                            </p>
                        }

                        <!-- AI Analysis Results (hidden by default) -->
                        <div id="analysisResults" class="mt-3 d-none">
                            <hr />
                            <h6 class="text-success"><i class="bi bi-check-circle me-1"></i>Extracted Data</h6>
                            <dl class="small mb-0">
                                <dt>Invoice Number</dt>
                                <dd id="resultInvoiceNumber">-</dd>
                                <dt>Invoice Date</dt>
                                <dd id="resultInvoiceDate">-</dd>
                                <dt>Supplier/Customer</dt>
                                <dd id="resultEntity">-</dd>
                                <dt>Total Amount</dt>
                                <dd id="resultAmount">-</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Quick Navigation to PDF Tools -->
                <div class="card shadow mt-3">
                    <div class="card-header bg-dark text-white">
                        <h6 class="mb-0"><i class="bi bi-tools me-2"></i>PDF Tools</h6>
                    </div>
                    <div class="card-body">
                        <a asp-action="MultiPagePdf" class="btn btn-outline-warning w-100 mb-2">
                            <i class="bi bi-file-earmark-pdf me-1"></i>Multi-Page PDF Import
                        </a>
                        <a asp-action="SmartSplit" class="btn btn-outline-info w-100 mb-2">
                            <i class="bi bi-scissors me-1"></i>Smart PDF Splitter
                        </a>
                        <p class="small text-muted mb-0">
                            <i class="bi bi-info-circle me-1"></i>Upload and process PDF files with multiple invoices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
                                        document.addEventListener('DOMContentLoaded', function () {
                                            const documentId = @Model.Id;
                                            const editNameBtn = document.getElementById('editNameBtn');
                                            const editNameBtn2 = document.getElementById('editNameBtn2');
                                            const editNameForm = document.getElementById('editNameForm');
                                            const fileNameDisplay = document.getElementById('fileNameDisplay');
                                            const fileNameDisplaySidebar = document.getElementById('fileNameDisplaySidebar');
                                            const fileNameInput = document.getElementById('fileNameInput');
                                            const saveNameBtn = document.getElementById('saveNameBtn');
                                            const cancelNameBtn = document.getElementById('cancelNameBtn');
                                            const documentTitle = document.getElementById('documentTitle');

                                            function showEditForm() {
                                                documentTitle.classList.add('d-none');
                                                editNameForm.classList.remove('d-none');
                                                fileNameInput.focus();
                                                fileNameInput.select();
                                            }

                                            function hideEditForm() {
                                                documentTitle.classList.remove('d-none');
                                                editNameForm.classList.add('d-none');
                                                fileNameInput.value = fileNameDisplay.textContent;
                                            }

                                            async function saveFileName() {
                                                const newName = fileNameInput.value.trim();
                                                if (!newName) { alert('File name cannot be empty.'); return; }

                                                saveNameBtn.disabled = true;
                                                saveNameBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                                                try {
                                                    const formData = new FormData();
                                                    formData.append('id', documentId);
                                                    formData.append('fileName', newName);

                                                    const response = await fetch('@Url.Action("UpdateDocumentName", "AiImport")', {
                                                        method: 'POST', body: formData
                                                    });
                                                    if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                                                    const result = await response.json();
                                                    if (result.success) {
                                                        fileNameDisplay.textContent = result.newName;
                                                        fileNameDisplaySidebar.textContent = result.newName;
                                                        fileNameInput.value = result.newName;
                                                        hideEditForm();
                                                        ProgressModal.toast(result.message, 'success');
                                                    } else {
                                                        alert(result.message);
                                                    }
                                                } catch (error) {
                                                    console.error('Error:', error);
                                                    alert('Error updating file name. Please try again.');
                                                } finally {
                                                    saveNameBtn.disabled = false;
                                                    saveNameBtn.innerHTML = '<i class="bi bi-check-lg"></i>';
                                                }
                                            }

                                            editNameBtn.addEventListener('click', showEditForm);
                                            editNameBtn2.addEventListener('click', showEditForm);
                                            cancelNameBtn.addEventListener('click', hideEditForm);
                                            saveNameBtn.addEventListener('click', saveFileName);
                                            fileNameInput.addEventListener('keydown', function (e) {
                                                if (e.key === 'Enter') { e.preventDefault(); saveFileName(); }
                                                else if (e.key === 'Escape') { hideEditForm(); }
                                            });

                                            // AI Analysis — uses global ProgressModal
                                            const analyzeBtn = document.getElementById('analyzeBtn');
                                            const analysisResults = document.getElementById('analysisResults');

                                            analyzeBtn.addEventListener('click', function () {
                                                analyzeBtn.disabled = true;
                                                const formData = new FormData();
                                                formData.append('id', documentId);

                                                ProgressModal.runWithProgress({
                                                    title: 'AI Invoice Analysis',
                                                    icon: 'robot',
                                                    colorClass: 'warning',
                                                    color: '#ffc107',
                                                    url: '@Url.Action("AnalyzeDocument", "AiImport")',
                                                    formData: formData,
                                                    stages: ProgressModal.aiAnalysisStages(),
                                                    stageInterval: 3000,
                                                    onSuccess: function (result, progress) {
                                                        // Update sidebar data
                                                        analysisResults.classList.remove('d-none');
                                                        document.getElementById('resultInvoiceNumber').textContent = result.data?.invoiceNumber || '-';
                                                        document.getElementById('resultInvoiceDate').textContent = result.data?.invoiceDate ? new Date(result.data.invoiceDate).toLocaleDateString('en-GB') : '-';
                                                        document.getElementById('resultEntity').textContent = result.data?.supplierName || result.data?.customerName || '-';
                                                        document.getElementById('resultAmount').textContent = result.data?.totalAmount ? 'K ' + parseFloat(result.data.totalAmount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) : '-';

                                                        if (result.data?.newFileName) {
                                                            fileNameDisplay.textContent = result.data.newFileName;
                                                            fileNameDisplaySidebar.textContent = result.data.newFileName;
                                                            fileNameInput.value = result.data.newFileName;
                                                        }

                                                        progress.complete(
                                                            (result.message || 'Analysis complete!') + ' Redirecting to review...',
                                                            '@Url.Action("ReviewInvoice", "AiImport")?documentId=' + documentId
                                                        );
                                                    },
                                                    onError: function () {
                                                        analyzeBtn.disabled = false;
                                                    }
                                                });
                                            });

                                            // Multi-Page PDF Analysis — uses global ProgressModal
                                            const multiPageBtn = document.getElementById('multiPageBtn');
                                            if (multiPageBtn) {
                                                multiPageBtn.addEventListener('click', function () {
                                                    multiPageBtn.disabled = true;
                                                    const formData = new FormData();
                                                    formData.append('id', documentId);

                                                    ProgressModal.runWithProgress({
                                                        title: 'Multi-Page PDF Analysis',
                                                        icon: 'files',
                                                        colorClass: 'warning',
                                                        color: '#ffc107',
                                                        url: '@Url.Action("ReprocessAsMultiPagePdfAjax", "AiImport")',
                                                        formData: formData,
                                                        stages: ProgressModal.reprocessStages(),
                                                        stageInterval: 4000,
                                                        confirm: true,
                                                        confirmMessage: 'Run Multi-Page PDF Analysis?\n\nThis will detect and extract all invoices from this PDF. This may take 30-90 seconds.',
                                                        onSuccess: function (result, progress) {
                                                            progress.complete(
                                                                `Extracted ${result.totalInvoices || '?'} invoices from ${result.totalPages || '?'} pages!`,
                                                                result.redirectUrl
                                                            );
                                                        },
                                                        onError: function () {
                                                            multiPageBtn.disabled = false;
                                                        }
                                                    });
                                                });
                                            }

                                            // ─── Smart Split button ──────────────────────────────
                                            window.smartSplitDocument = function (docId) {
                                                const fd = new FormData();
                                                fd.append('id', docId);

                                                ProgressModal.runWithProgress({
                                                    title: 'Smart PDF Splitter',
                                                    color: '#ffc107',
                                                    icon: 'scissors',
                                                    url: '@Url.Action("SmartSplitExistingAjax", "AiImport")',
                                                    formData: fd,
                                                    stages: ProgressModal.smartSplitStages(),
                                                    stageInterval: 4000,
                                                    confirm: true,
                                                    confirmMessage: 'Smart Split this PDF?\n\nThis will physically split the PDF into individual invoice files and match them with extracted records. This may take 1-3 minutes.',
                                                    onSuccess: function (result, progress) {
                                                        progress.complete(
                                                            result.message || 'Smart split complete!',
                                                            result.redirectUrl
                                                        );
                                                    }
                                                });
                                            };
                                        });
        </script>
    }