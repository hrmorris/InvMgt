@{
    ViewData["Title"] = "AI Import - Payments";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-robot"></i> AI-Powered Payment Import</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-controller="Payments" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Payments
        </a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="m-0"><i class="bi bi-cloud-upload"></i> Upload Payment Document</h5>
            </div>
            <div class="card-body">
                <form id="paymentImportForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    
                    <div class="alert alert-info">
                        <h6><i class="bi bi-lightbulb"></i> How it works:</h6>
                        <ol class="mb-0">
                            <li>Upload payment receipts, bank statements, or proof of payment</li>
                            <li>AI performs deep analysis to extract all payment details</li>
                            <li>System matches payments to suppliers/customers by bank details</li>
                            <li>Review, verify, and modify before saving</li>
                        </ol>
                    </div>

                    <!-- File Upload Area -->
                    <div class="mb-4">
                        <label for="file" class="form-label fw-bold">Select Payment Document</label>
                        <div class="upload-area border border-2 border-dashed rounded p-4 text-center" 
                             id="uploadArea" style="border-color: #28a745 !important; cursor: pointer;">
                            <i class="bi bi-cloud-arrow-up display-4 text-success"></i>
                            <p class="mt-2 mb-0">
                                <strong>Click to select</strong> or drag and drop
                            </p>
                            <p class="text-muted small mb-0">PDF, JPG, PNG, GIF, WebP (max 500MB)</p>
                        </div>
                        <input type="file" 
                               class="form-control d-none" 
                               id="file" 
                               name="file" 
                               accept=".pdf,.jpg,.jpeg,.png,.gif,.webp"
                               required />
                        <div id="fileInfo" class="mt-2 d-none">
                            <div class="d-flex align-items-center p-2 bg-light rounded">
                                <i class="bi bi-file-earmark-text text-success fs-4 me-2"></i>
                                <div class="flex-grow-1">
                                    <strong id="fileName"></strong>
                                    <small class="text-muted d-block" id="fileSize"></small>
                                </div>
                                <button type="button" class="btn btn-sm btn-outline-danger" id="removeFile">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Analysis Options -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="bi bi-gear me-2"></i>Analysis Options</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-2">
                                <input type="checkbox" class="form-check-input" id="deepAnalysis" name="deepAnalysis" checked />
                                <label class="form-check-label" for="deepAnalysis">
                                    <strong>Deep Document Analysis</strong>
                                    <br/><small class="text-muted">Extract all text, tables, and structured data</small>
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input type="checkbox" class="form-check-input" id="autoMatch" name="autoMatch" checked />
                                <label class="form-check-label" for="autoMatch">
                                    <strong>Auto-Match Entities</strong>
                                    <br/><small class="text-muted">Match to suppliers/customers by bank account</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="detectInvoices" name="detectInvoices" checked />
                                <label class="form-check-label" for="detectInvoices">
                                    <strong>Detect Related Invoices</strong>
                                    <br/><small class="text-muted">Find invoices that may relate to this payment</small>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg" id="processBtn">
                            <i class="bi bi-cpu me-2"></i>Start AI Analysis
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-3">
            <div class="card-header bg-success text-white">
                <h6 class="m-0"><i class="bi bi-check-circle"></i> What Gets Extracted</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Payment/Receipt Number</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Payment Date</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Amount Paid</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Payment Method</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Reference Number</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Bank Details</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Payer/Payee Names</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Related Invoice References</li>
                </ul>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h6 class="m-0"><i class="bi bi-diagram-3"></i> Smart Matching</h6>
            </div>
            <div class="card-body">
                <p class="small mb-2">The AI will match payments by:</p>
                <ul class="small mb-0">
                    <li><strong>Bank Account Numbers</strong> - Primary matching</li>
                    <li><strong>Bank Name + Branch</strong> - Secondary matching</li>
                    <li><strong>Payer/Payee Names</strong> - Name similarity</li>
                    <li><strong>Invoice References</strong> - Document mentions</li>
                    <li><strong>Amount Matching</strong> - Outstanding balances</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Progress Modal -->
<div class="modal fade" id="progressModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="bi bi-cpu me-2"></i>AI Processing Document
                </h5>
            </div>
            <div class="modal-body">
                <!-- Progress Bar -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-bold">Progress</span>
                        <span class="fw-bold" id="progressPercent">0%</span>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
                             role="progressbar" 
                             id="progressBar"
                             style="width: 0%;" 
                             aria-valuenow="0" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>

                <!-- Current Activity -->
                <div class="mb-3">
                    <div class="d-flex align-items-center">
                        <div class="spinner-border spinner-border-sm text-success me-2" id="activitySpinner"></div>
                        <span id="currentActivity" class="text-muted">Initializing...</span>
                    </div>
                </div>

                <!-- Activity Log -->
                <div class="card">
                    <div class="card-header py-2">
                        <small class="fw-bold"><i class="bi bi-list-check me-1"></i>Activity Log</small>
                    </div>
                    <div class="card-body p-2" style="max-height: 200px; overflow-y: auto;" id="activityLog">
                        <!-- Activities will be added here -->
                    </div>
                </div>
            </div>
            <div class="modal-footer d-none" id="progressFooter">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Processing Error</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="errorMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="location.reload()">Try Again</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('paymentImportForm');
    const fileInput = document.getElementById('file');
    const uploadArea = document.getElementById('uploadArea');
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    const fileSize = document.getElementById('fileSize');
    const removeFile = document.getElementById('removeFile');
    const processBtn = document.getElementById('processBtn');
    
    const progressModal = new bootstrap.Modal(document.getElementById('progressModal'));
    const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
    
    // File upload area click
    uploadArea.addEventListener('click', () => fileInput.click());
    
    // Drag and drop
    uploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadArea.classList.add('bg-light');
    });
    
    uploadArea.addEventListener('dragleave', () => {
        uploadArea.classList.remove('bg-light');
    });
    
    uploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadArea.classList.remove('bg-light');
        if (e.dataTransfer.files.length) {
            fileInput.files = e.dataTransfer.files;
            showFileInfo(e.dataTransfer.files[0]);
        }
    });
    
    // File input change
    fileInput.addEventListener('change', function() {
        if (this.files.length) {
            showFileInfo(this.files[0]);
        }
    });
    
    // Remove file
    removeFile.addEventListener('click', function() {
        fileInput.value = '';
        fileInfo.classList.add('d-none');
        uploadArea.classList.remove('d-none');
    });
    
    function showFileInfo(file) {
        fileName.textContent = file.name;
        fileSize.textContent = formatFileSize(file.size);
        fileInfo.classList.remove('d-none');
        uploadArea.classList.add('d-none');
    }
    
    function formatFileSize(bytes) {
        if (bytes < 1024) return bytes + ' bytes';
        if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
        return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
    }
    
    // Form submission with progress
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        if (!fileInput.files.length) {
            alert('Please select a file to upload.');
            return;
        }
        
        const formData = new FormData(form);
        
        // Show progress modal
        progressModal.show();
        resetProgress();
        
        // Simulate progress stages
        const stages = [
            { percent: 5, activity: 'Uploading document...', status: 'Uploading' },
            { percent: 15, activity: 'Document uploaded successfully', status: 'Uploaded' },
            { percent: 20, activity: 'Analyzing document structure...', status: 'Analyzing' },
            { percent: 30, activity: 'Extracting text content...', status: 'Extracting' },
            { percent: 40, activity: 'Identifying payment information...', status: 'Processing' },
            { percent: 50, activity: 'Detecting bank details...', status: 'Processing' },
            { percent: 60, activity: 'Extracting amounts and dates...', status: 'Processing' },
            { percent: 70, activity: 'Matching supplier/customer by bank account...', status: 'Matching' },
            { percent: 80, activity: 'Searching for related invoices...', status: 'Matching' },
            { percent: 90, activity: 'Validating extracted data...', status: 'Validating' },
            { percent: 95, activity: 'Preparing review page...', status: 'Finalizing' }
        ];
        
        let stageIndex = 0;
        
        // Progress simulation
        const progressInterval = setInterval(() => {
            if (stageIndex < stages.length) {
                updateProgress(stages[stageIndex].percent, stages[stageIndex].activity, stages[stageIndex].status);
                stageIndex++;
            }
        }, 800);
        
        try {
            const response = await fetch('/AiImport/ProcessPayment', {
                method: 'POST',
                body: formData
            });
            
            clearInterval(progressInterval);
            
            if (response.ok) {
                const result = await response.json();
                
                if (result.success) {
                    updateProgress(100, 'Analysis complete! Redirecting...', 'Complete');
                    addActivity('âœ“ All data extracted successfully', 'success');
                    
                    setTimeout(() => {
                        progressModal.hide();
                        // Redirect to review page with extracted data
                        window.location.href = result.redirectUrl;
                    }, 1000);
                } else {
                    progressModal.hide();
                    document.getElementById('errorMessage').textContent = result.message || 'Failed to process document.';
                    errorModal.show();
                }
            } else {
                throw new Error('Server error: ' + response.status);
            }
        } catch (error) {
            clearInterval(progressInterval);
            progressModal.hide();
            document.getElementById('errorMessage').textContent = error.message || 'An error occurred while processing the document.';
            errorModal.show();
        }
    });
    
    function resetProgress() {
        document.getElementById('progressBar').style.width = '0%';
        document.getElementById('progressPercent').textContent = '0%';
        document.getElementById('currentActivity').textContent = 'Initializing...';
        document.getElementById('activityLog').innerHTML = '';
        document.getElementById('progressFooter').classList.add('d-none');
        document.getElementById('activitySpinner').classList.remove('d-none');
    }
    
    function updateProgress(percent, activity, status) {
        document.getElementById('progressBar').style.width = percent + '%';
        document.getElementById('progressPercent').textContent = percent + '%';
        document.getElementById('currentActivity').textContent = activity;
        addActivity(activity, status === 'Complete' ? 'success' : 'info');
        
        if (percent >= 100) {
            document.getElementById('activitySpinner').classList.add('d-none');
        }
    }
    
    function addActivity(text, type = 'info') {
        const log = document.getElementById('activityLog');
        const item = document.createElement('div');
        item.className = 'small py-1 border-bottom';
        
        const icon = type === 'success' ? 'check-circle-fill text-success' : 
                     type === 'error' ? 'x-circle-fill text-danger' : 
                     'arrow-right text-primary';
        
        item.innerHTML = `<i class="bi bi-${icon} me-1"></i>${text}`;
        log.appendChild(item);
        log.scrollTop = log.scrollHeight;
    }
});
</script>
}

<style>
.upload-area {
    transition: all 0.3s ease;
}
.upload-area:hover {
    background-color: #f8f9fa;
}
.border-dashed {
    border-style: dashed !important;
}
</style>

