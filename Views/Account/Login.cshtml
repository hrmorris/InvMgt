@{
    ViewData["Title"] = "Login";
    Layout = null;

    // Pull appearance/branding from the global AppearanceViewDataFilter
    var appName = ViewData["AppName"] as string ?? "Invoice Management System";
    var tagLine = ViewData["Branding_TagLine"] as string ?? "Powered by AI Technology";
    var faviconUrl = ViewData["Branding_FaviconUrl"] as string ?? "";
    var logoUrl = ViewData["Branding_LogoUrl"] as string ?? "";
    var primaryColor = ViewData["Theme_PrimaryColor"] as string ?? "#667eea";
    var accentColor = ViewData["Theme_AccentColor"] as string ?? "#764ba2";
    var fontFamily = ViewData["Theme_FontFamily"] as string ?? "Inter";

    // Login screen settings
    var loginBgType = ViewData["Login_BackgroundType"] as string ?? "gradient";
    var loginBgUrl = ViewData["Login_BackgroundUrl"] as string ?? "";
    var loginCardOpacity = ViewData["Login_CardOpacity"] is int op ? op : 95;
    var showFeatureBoxes = ViewData["Login_ShowFeatureBoxes"] is bool sfb ? sfb : true;

    // Company info for footer
    var companyPhone = ViewData["Company_Phone"] as string ?? "";
    var companyEmail = ViewData["Company_Email"] as string ?? "";

    var cardAlpha = loginCardOpacity / 100.0;
    var hasCustomBg = !string.IsNullOrEmpty(loginBgUrl) && loginBgType != "gradient";
    var isVideo = loginBgType == "video" && hasCustomBg;
    var isImage = loginBgType == "image" && hasCustomBg;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - @appName</title>
    @if (!string.IsNullOrEmpty(faviconUrl))
    {
        <link rel="icon" href="@faviconUrl" />
    }
    else
    {
        <link rel="icon" type="image/svg+xml"
              href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“„</text></svg>">
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @if (fontFamily != "Segoe UI" && fontFamily != "system-ui" && fontFamily != "System Default")
    {
        <link href="https://fonts.googleapis.com/css2?family=@(fontFamily.Replace(" ", "+"))&display=swap" rel="stylesheet">
    }
    <style>
            * { margin: 0; padding: 0; box-sizing: border-box; }

            body {
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                font-family: '@fontFamily', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                position: relative;
                overflow: hidden;
            }

            /* Gradient fallback background */
            .login-bg-gradient {
                position: fixed;
                inset: 0;
                background: linear-gradient(135deg, @primaryColor 0%, @accentColor 100%);
                z-index: 0;
            }

            /* Custom image background */
            .login-bg-image {
                position: fixed;
                inset: 0;
                z-index: 0;
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
            }

            /* Video background */
            .login-bg-video {
                position: fixed;
                inset: 0;
                z-index: 0;
                overflow: hidden;
            }
            .login-bg-video video {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            /* Dark overlay for readability */
            .login-bg-overlay {
                position: fixed;
                inset: 0;
                z-index: 1;
                background: rgba(0, 0, 0, 0.35);
            }

            .login-container {
                max-width: 450px;
                width: 100%;
                padding: 15px;
                position: relative;
                z-index: 10;
            }

            .login-card {
                background: rgba(255, 255, 255, @cardAlpha);
                backdrop-filter: blur(20px);
                -webkit-backdrop-filter: blur(20px);
                border-radius: 20px;
                box-shadow: 0 15px 50px rgba(0, 0, 0, 0.25);
                overflow: hidden;
                border: 1px solid rgba(255, 255, 255, 0.3);
            }

            .login-header {
                background: linear-gradient(135deg, @(primaryColor)cc, @(accentColor)cc);
                backdrop-filter: blur(10px);
                color: white;
                padding: 35px 30px;
                text-align: center;
            }

            .login-header h1 {
                font-size: 1.8rem;
                font-weight: bold;
                margin-bottom: 8px;
            }
            .login-header p {
                margin: 0;
                opacity: 0.9;
                font-size: 0.95rem;
            }
            .login-body {
                padding: 35px 30px;
            }
            .form-control {
                border-radius: 10px;
                padding: 12px 15px;
                border: 1px solid rgba(0, 0, 0, 0.1);
                background: rgba(255, 255, 255, 0.8);
                transition: all 0.3s;
            }
            .form-control:focus {
                border-color: @primaryColor;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
                background: white;
            }

            .btn-login {
                background: linear-gradient(135deg, @primaryColor 0%, @accentColor 100%);
                border: none;
                border-radius: 10px;
                padding: 12px;
                font-weight: bold;
                color: white;
                width: 100%;
                transition: all 0.3s;
                font-size: 1rem;
            }
            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
                color: white;
            }
            .icon-input {
                position: relative;
            }
            .icon-input i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }
            .icon-input input {
                padding-left: 45px;
            }
            .divider {
                text-align: center;
                margin: 20px 0;
                position: relative;
            }
            .divider:before {
                content: "";
                position: absolute;
                left: 0;
                top: 50%;
                width: 100%;
                height: 1px;
                background: rgba(0, 0, 0, 0.1);
            }
            .divider span {
                background: rgba(255, 255, 255, @cardAlpha);
                padding: 0 15px;
                position: relative;
                color: #999;
                font-size: 0.85rem;
            }
            .alert {
                border-radius: 10px;
            }
            .feature-box {
                text-align: center;
                padding: 18px;
                margin-top: 20px;
                background: rgba(255, 255, 255, 0.12);
                backdrop-filter: blur(15px);
                -webkit-backdrop-filter: blur(15px);
                border-radius: 14px;
                border: 1px solid rgba(255, 255, 255, 0.15);
            }
            .feature-box i {
                font-size: 1.8rem;
                color: white;
                margin-bottom: 8px;
            }
            .feature-box small {
                color: rgba(255, 255, 255, 0.9);
            }
            .login-footer-info {
                text-align: center;
                margin-top: 12px;
            }
            .login-footer-info a {
                color: rgba(255, 255, 255, 0.85);
                text-decoration: none;
                transition: color 0.2s;
            }
            .login-footer-info a:hover {
                color: white;
            }
    </style>
</head>

<body>
    <!-- Background Layer -->
    @if (isVideo)
    {
        <div class="login-bg-video">
            <video autoplay muted loop playsinline>
                <source src="@loginBgUrl" type="video/mp4" />
            </video>
        </div>
        <div class="login-bg-overlay"></div>
    }
    else if (isImage)
    {
        <div class="login-bg-image" style="background-image: url('@loginBgUrl');"></div>
        <div class="login-bg-overlay"></div>
    }
    else
    {
        <div class="login-bg-gradient"></div>
    }

    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                @if (!string.IsNullOrEmpty(logoUrl))
                {
                    <img src="@logoUrl" alt="@appName"
                         style="height: 60px; max-width: 200px; object-fit: contain; margin-bottom: 15px;" />
                }
                else
                {
                    <i class="bi bi-receipt-cutoff" style="font-size: 3rem;"></i>
                }
                <h1>@appName</h1>
                <p>@tagLine</p>
            </div>
            <div class="login-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="mb-3">
                        <label for="username" class="form-label">
                            <i class="bi bi-person"></i> Username
                        </label>
                        <div class="icon-input">
                            <i class="bi bi-person-circle"></i>
                            <input type="text" class="form-control" id="username" name="username"
                                   placeholder="Enter your username" required autofocus />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <div class="icon-input">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Enter your password" required />
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <button type="submit" class="btn btn-login">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </button>
                </form>

                <div class="divider">
                    <span>NEED HELP?</span>
                </div>

                <div class="text-center">
                    <p class="mb-0">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Contact your administrator for access
                        </small>
                    </p>
                </div>
            </div>
        </div>

        @if (showFeatureBoxes)
        {
            <!-- Features -->
            <div class="feature-box">
                <div class="row text-center">
                    <div class="col-4">
                        <i class="bi bi-robot"></i>
                        <p class="mb-0"><small>AI-Powered</small></p>
                    </div>
                    <div class="col-4">
                        <i class="bi bi-shield-check"></i>
                        <p class="mb-0"><small>Secure</small></p>
                    </div>
                    <div class="col-4">
                        <i class="bi bi-lightning"></i>
                        <p class="mb-0"><small>Fast</small></p>
                    </div>
                </div>
            </div>
        }

        <div class="text-center mt-3">
            <small class="text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.3);">
                &copy; @DateTime.Now.Year @appName. All rights reserved.
            </small>
        </div>

        @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail))
        {
            <div class="login-footer-info mt-2">
                @if (!string.IsNullOrEmpty(companyPhone))
                {
                    <small><a href="tel:@companyPhone"><i class="bi bi-telephone me-1"></i>@companyPhone</a></small>
                }
                @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail))
                {
                    <small class="text-white-50 mx-2">|</small>
                }
                @if (!string.IsNullOrEmpty(companyEmail))
                {
                    <small><a href="mailto:@companyEmail"><i class="bi bi-envelope me-1"></i>@companyEmail</a></small>
                }
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>