@model InvoiceManagement.Models.User

@{
    ViewData["Title"] = "First Time Setup";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Invoice Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 0;
        }
        .setup-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px 15px 0 0 !important;
            padding: 30px;
            text-align: center;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
        .alert-info {
            background-color: #e3f2fd;
            border-color: #2196f3;
            color: #1976d2;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="setup-container">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0"><i class="bi bi-gear"></i> First Time Setup</h1>
                    <p class="mb-0 mt-2">Create Your Administrator Account</p>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle"></i> 
                        <strong>Welcome!</strong> This is a one-time setup to create the first administrator account. 
                        After this, only administrators can create new users.
                    </div>

                    <form asp-action="FirstTimeSetup" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Username" class="form-label">
                                    <i class="bi bi-person"></i> Username *
                                </label>
                                <input asp-for="Username" class="form-control" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">
                                    <i class="bi bi-lock"></i> Password *
                                </label>
                                <input type="password" name="password" class="form-control" required minlength="6" />
                                <small class="text-muted">Minimum 6 characters</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">
                                <i class="bi bi-person-badge"></i> Full Name *
                            </label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email *
                                </label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="bi bi-telephone"></i> Phone
                                </label>
                                <input asp-for="Phone" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Department" class="form-label">
                                    <i class="bi bi-building"></i> Department *
                                </label>
                                <input asp-for="Department" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Facility" class="form-label">
                                    <i class="bi bi-hospital"></i> Facility *
                                </label>
                                <input asp-for="Facility" class="form-control" required placeholder="e.g., Main Hospital" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FacilityType" class="form-label">
                                <i class="bi bi-geo-alt"></i> Facility Type *
                            </label>
                            <select asp-for="FacilityType" class="form-select" required>
                                <option value="">-- Select Facility Type --</option>
                                <option value="Hospital">Hospital</option>
                                <option value="Outstation">Outstation Health Facility</option>
                            </select>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-shield-check"></i> 
                            <strong>Note:</strong> This account will be created with <strong>Administrator</strong> privileges.
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Create Administrator Account
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

