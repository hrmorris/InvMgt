@model InvoiceManagement.Models.PurchaseOrder

@{
    ViewData["Title"] = "Edit Purchase Order";
    var suppliers = ViewBag.Suppliers as IEnumerable<InvoiceManagement.Models.Supplier>;
}
@functions {
    public string FormatCurrency(decimal amount)
    {
        var settings = ViewData["CurrencySettings"] as CurrencySettings;
        if (settings != null)
        {
            return CurrencyHelper.FormatCurrency(amount, settings);
        }
        return $"K {amount:N2}";
    }
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-pencil-square"></i> Edit Purchase Order</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Details
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PONumber" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="RequisitionId" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="TotalAmount" />
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <h5 class="mb-3"><i class="bi bi-info-circle"></i> Purchase Order Information</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PONumber" class="form-label">PO Number</label>
                            <input asp-for="PONumber" class="form-control" readonly />
                            <small class="text-muted">Cannot be changed</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PODate" class="form-label">PO Date *</label>
                            <input asp-for="PODate" class="form-control" type="date" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SupplierId" class="form-label">
                                <i class="bi bi-building"></i> Supplier *
                            </label>
                            <select asp-for="SupplierId" class="form-select" required>
                                <option value="">-- Select a Supplier --</option>
                                @if (suppliers != null)
                                {
                                    @foreach (var supplier in suppliers)
                                    {
                                        <option value="@supplier.Id" selected="@(supplier.Id == Model.SupplierId)">
                                            @supplier.SupplierName (@supplier.SupplierCode)
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpectedDeliveryDate" class="form-label">Expected Delivery Date *</label>
                            <input asp-for="ExpectedDeliveryDate" class="form-control" type="date" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeliveryAddress" class="form-label">Delivery Address *</label>
                        <textarea asp-for="DeliveryAddress" class="form-control" rows="2" required></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PreparedBy" class="form-label">Prepared By *</label>
                            <input asp-for="PreparedBy" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApprovedBy" class="form-label">Approved By</label>
                            <input asp-for="ApprovedBy" class="form-control" />
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                    {
                        <div class="mb-3">
                            <label asp-for="ApprovalDate" class="form-label">Approval Date</label>
                            <input asp-for="ApprovalDate" class="form-control" type="datetime-local" />
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="TermsAndConditions" class="form-label">Terms & Conditions</label>
                        <textarea asp-for="TermsAndConditions" class="form-control" rows="3"
                            placeholder="Payment terms, delivery conditions, etc."></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"
                            placeholder="Any additional notes"></textarea>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> <strong>Note:</strong> Items cannot be edited here. To modify
                        items, you need to update the original requisition or create a new purchase order.
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Update Purchase Order
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-3 bg-info text-white">
            <div class="card-body">
                <h5><i class="bi bi-info-circle"></i> Edit Mode</h5>
                <p class="mb-0">You can modify purchase order details. The PO will remain in
                    <strong>@Model.Status</strong> status after update.</p>
            </div>
        </div>

        <div class="card shadow mb-3">
            <div class="card-header bg-warning">
                <i class="bi bi-exclamation-triangle"></i> Important
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>PO number cannot be changed</li>
                    <li>Items are linked to requisition</li>
                    <li>Total amount is auto-calculated</li>
                    <li>Ensure supplier is correct</li>
                </ul>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-clock-history"></i> Last Modified
            </div>
            <div class="card-body">
                @if (Model.ModifiedDate.HasValue)
                {
                    <p class="mb-0">@Model.ModifiedDate.Value.ToString("yyyy-MM-dd HH:mm")</p>
                }
                else
                {
                    <p class="mb-0">Not yet modified</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}